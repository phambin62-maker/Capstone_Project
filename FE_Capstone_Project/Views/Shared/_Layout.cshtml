@using FE_Capstone_Project.Helpers
@inject AuthHelper AuthHelper
@{
    var firstname = Context.Session.GetString("UserName");
    var roleId = Context.Session.GetInt32("UserRoleId");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Online Travel Management System</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/css/site.css" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .main-wrapper {
            flex: 1;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
    <!-- Chat Widget CSS (only for logged-in customers) -->
    @if (!string.IsNullOrEmpty(Context.Session.GetString("JwtToken")) && Context.Session.GetInt32("UserRoleId") != 1)
    {
        <link href="~/css/chat.css" rel="stylesheet" />
    }
</head>
<body>
    @{
        var hideHeader = ViewData["HideHeader"] as bool? ?? false;
    }
    @if (!hideHeader)
    {
        <header id="header" class="header d-flex align-items-center fixed-top">
            <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

                <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-xl-0">
                    <!-- Uncomment the line below if you also wish to use an image logo -->
                    <!-- <img src="~/assets/img/logo.webp" alt=""> -->
                    <h1 class="sitename">OTMS</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                        <li><a asp-controller="TourWeb" asp-action="Tours">Tours</a></li>
                        <li><a asp-controller="News" asp-action="Index">News</a></li>
                        
                        @* Menu cho Admin *@
                        @if (AuthHelper.IsAdmin())
                        {
                            <li class="dropdown">
                                <a><span>Management</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a asp-controller="AdminWeb" asp-action="Account">Admin Management</a></li>
                                    <li><a asp-controller="AdminWeb" asp-action="Report">Report</a></li>
                                </ul>
                            </li>
                        }
                        
                        @* Menu cho Staff *@
                        @if (AuthHelper.IsStaff())
                        {
                            <li class="dropdown">
                                <a><span>Management</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a asp-controller="Staff" asp-action="Tours">Tour Management</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
                <nav id="user-nav" class="navmenu">
                    <ul>
                        @if (!string.IsNullOrEmpty(firstname))
                        {
                            <li class="notification-item dropdown">
                                <a class="notification-trigger" href="#" id="notification-bell-trigger"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false"
                                   title="Notifications">

                                    <span class="notification-icon-container fs-5">
                                        <i class="bi bi-bell"></i>
                                        <span class="badge rounded-pill bg-danger notification-count d-none" id="notification-count-badge">0</span>
                                    </span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notification-bell-trigger"
                                    id="notification-dropdown-list"
                                    style="min-width: 300px; max-height: 400px; overflow-y: auto;">

                                    <li><div class="dropdown-item text-center">Loading...</div></li>

                                </ul>
                            </li>

                            <li class="dropdown">
                                <a>
                                    <span>Welcome, @firstname</span>
                                    <i class="bi bi-chevron-down toggle-dropdown"></i>
                                </a>
                                <ul>
                                    <li><a asp-action="Profile" asp-controller="AuthWeb">Profile</a></li>
                                    <li><a asp-action="MyBookings" asp-controller="Profile">My Bookings</a></li>
                                    <li><a asp-action="Wishlist" asp-controller="Profile">Wishlist</a></li>
                                    <li><a asp-action="Logout" asp-controller="AuthWeb">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li><a asp-action="Login" asp-controller="AuthWeb">Login</a></li>
                        }
                    </ul>
                </nav>

                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </div>
        </header>
    }
    <div class="main-wrapper">
        <main class="container">
            @RenderBody()
        </main>
    </div>
    <footer id="footer" class="footer position-relative dark-background">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-md-6 footer-about">
                    <a href="index.html" class="d-flex align-items-center">
                        <span class="sitename">Tour</span>
                    </a>
                    <div class="footer-contact pt-3">
                        <p>A108 Adam Street</p>
                        <p>New York, NY 535022</p>
                        <p class="mt-3"><strong>Phone:</strong> <span>+1 5589 55488 55</span></p>
                        <p><strong>Email:</strong> <span>info@example.com</span></p>
                    </div>
                </div>

                <div class="col-md-6 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index" class="bi bi-chevron-right">Home</a></li>
                        <li><a asp-controller="TourWeb" asp-action="Tours" class="bi bi-chevron-right">Tours</a></li>
                        <li><a asp-controller="News" asp-action="Index" class="bi bi-chevron-right">News</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">OTMS</strong> <span>All Rights Reserved</span></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    <!-- Chat Widget Scripts (for logged-in Staff and Customer) -->
    @if (!string.IsNullOrEmpty(Context.Session.GetString("JwtToken")) && (Context.Session.GetInt32("UserRoleId") == 2 || Context.Session.GetInt32("UserRoleId") == 3))
    {
        <!-- Chat Widget -->
        @await Html.PartialAsync("_ChatWidget")
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
        <script src="~/js/chat-widget.js" asp-append-version="true"></script>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
