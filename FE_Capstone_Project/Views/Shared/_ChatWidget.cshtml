@{
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("JwtToken"));
    var userId = Context.Session.GetInt32("UserId");
    var roleId = Context.Session.GetInt32("UserRoleId");
    var jwtToken = Context.Session.GetString("JwtToken");
}

@if (isLoggedIn)
{
    <!-- Chat Widget -->
    <div id="chatWidget" class="chat-widget">
        <!-- Chat Button -->
        <button id="chatWidgetButton" class="chat-widget-button" title="Chat with Support">
            <i class="bi bi-chat-dots-fill"></i>
            <span class="chat-badge" id="chatBadge" style="display: none;">0</span>
        </button>

        <!-- Chat Window -->
        <div id="chatWindow" class="chat-window" style="display: none;">
            <div class="chat-window-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-headset"></i> Support Chat
                    </h6>
                    <button id="chatCloseButton" class="btn btn-sm btn-link text-white">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>
            <div class="chat-window-body" id="chatWidgetMessages">
                <!-- Initial selection: Bot or Staff -->
                <div id="initialSelection" class="initial-selection">
                    <p class="text-center text-muted mb-3">Chọn cách bạn muốn nhắn tin:</p>
                    <div class="selection-options">
                        <div class="selection-option bot-option" id="selectBotOption">
                            <div class="option-icon">
                                <i class="bi bi-robot"></i>
                            </div>
                            <div class="option-content">
                                <h6 class="mb-1">Chat với AI Bot</h6>
                                <p class="text-muted small mb-0">Trợ lý AI tự động, hỗ trợ 24/7</p>
                            </div>
                        </div>
                        <div class="selection-option staff-option" id="selectStaffOption">
                            <div class="option-icon">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <div class="option-content">
                                <h6 class="mb-1">Chat với Nhân viên</h6>
                                <p class="text-muted small mb-0">Nhân viên hỗ trợ trực tiếp</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Staff selection -->
                <div id="staffSelection" class="staff-selection" style="display: none;">
                    <div class="d-flex align-items-center mb-3">
                        <button class="btn btn-sm btn-link text-muted" id="backToSelectionBtn">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </button>
                    </div>
                    <p class="text-center text-muted mb-3">Chọn nhân viên để bắt đầu chat:</p>
                    <div id="staffList" class="staff-list">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2 small">Loading staff...</p>
                        </div>
                    </div>
                </div>
                <!-- Staff side: customer selection -->
                <div id="customerSelection" class="staff-selection" style="display: none;">
                    <p class="text-center text-muted mb-3">Select a customer conversation to continue:</p>
                    <div id="customerList" class="staff-list">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2 small">Loading conversations...</p>
                        </div>
                    </div>
                </div>
                <div id="chatMessagesContainer" class="chat-messages-container" style="display: none;">
                    <!-- Messages will be displayed here -->
                </div>
            </div>
            <div class="chat-window-footer" id="chatInputContainer" style="display: none;">
                <div class="chat-input-group">
                    <input type="text" class="form-control chat-input" id="chatWidgetInput" placeholder="Type your message..." maxlength="500">
                    <button class="btn btn-primary chat-send-btn" id="chatWidgetSendButton">
                        <i class="bi bi-send"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Inject JWT Token for JavaScript -->
    @if (!string.IsNullOrEmpty(jwtToken))
    {
        <meta name="jwt-token" content="@jwtToken">
        <input type="hidden" id="jwtToken" value="@jwtToken">
    }
    <input type="hidden" id="currentUserId" value="@userId">
    <input type="hidden" id="currentRoleId" value="@roleId">
}

