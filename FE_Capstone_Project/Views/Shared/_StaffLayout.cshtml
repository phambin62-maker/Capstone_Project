<!DOCTYPE html>
<html lang="en">
@{
        var firstname = Context.Session.GetString("FirstName");
        var hideHeader = ViewData["HideHeader"] as bool? ?? false;
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - Staff Panel</title>

    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/css/staff.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="staff-body">
    @if (!hideHeader)
    {
        <header id="header" class="header d-flex align-items-center fixed-top">
            <div class="header-container container-fluid container-xl d-flex align-items-center justify-content-between">
                <a asp-action="Index" asp-controller="Staff" class="logo d-flex align-items-center me-auto me-xl-0">
                    <h1 class="sitename">Staff Panel</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li class="dropdown">
                            <a href="#"><span>Work</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a href="/Staff/Tours">Tour List</a></li>
                                <li><a href="/StaffSchedule/Schedules">Tour Schedule</a></li>
                                <li><a href="/StaffBooking/Bookings">Booking Management</a></li>
                            </ul>
                        </li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

                @if (!string.IsNullOrEmpty(firstname))
                {
                    <div class="dropdown">
                        <a class="btn-getstarted dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-2"></i>@firstname
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/AuthWeb/Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="/Staff/Profile"><i class="bi bi-gear me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form id="logoutForm" method="post" action="/AuthWeb/Logout">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left;">
                                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </header>
    }

    <div class="staff-container">
        <div class="staff-sidebar">
            <div class="sidebar-header">
                <div class="user-info">
                    <div class="user-avatar"><i class="bi bi-person-circle"></i></div>
                    <div class="user-details">
                        <h6>@firstname</h6>
                        <small>Staff</small>
                    </div>
                </div>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Staff" ? "active" : "")"
                           href="/Staff/Index">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "StaffBooking" ? "active" : "")"
                           href="/StaffBooking/Bookings">
                            <i class="bi bi-journal-check me-2"></i>Booking Management
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tours" ? "active" : "")"
                           href="/Staff/Tours">
                            <i class="bi bi-map me-2"></i>Tour List
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "StaffSchedule" ? "active" : "")"
                           href="/StaffSchedule/Schedules">
                            <i class="bi bi-calendar-event me-2"></i>Tour Schedule
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "News" ? "active" : "")"
                           href="/Staff/News">
                            <i class="bi bi-newspaper me-2"></i>News
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Support" ? "active" : "")"
                           href="/Staff/Support">
                            <i class="bi bi-headset me-2"></i>Support
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <main class="staff-main">
            <div class="staff-content">
                <!-- Header với nút Home và Logout -->
                <div class="content-header d-flex justify-content-between align-items-center mb-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-nav">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Staff/Index">Staff</a></li>
                            <li class="breadcrumb-item active">@ViewData["Title"]</li>
                        </ol>
                    </nav>

                    <div class="header-actions">
                        <a href="/" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-house me-1"></i>Home
                        </a>
                        <form id="logoutFormHeader" method="post" action="/AuthWeb/Logout" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </button>
                        </form>
                    </div>
                </div>

                <partial name="_AlertMessages" />

                @RenderBody()
            </div>
        </main>
    </div>

    @if (!hideHeader)
    {
        <footer class="staff-footer">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; @DateTime.Now.Year Staff Panel. Welcome @firstname!</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="text-muted">Today: @DateTime.Now.ToString("MM/dd/yyyy")</span>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/js/staff.js"></script>

    <script>
        // Xác nhận logout
        document.addEventListener('DOMContentLoaded', function() {
            const logoutForms = document.querySelectorAll('form[id^="logoutForm"]');

            logoutForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Are you sure you want to logout?')) {
                        e.preventDefault();
                    }
                });
            });

            // Active sidebar highlighting
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.sidebar-nav .nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>