<!DOCTYPE html>
<html lang="en">
@{
    var firstname = Context.Session.GetString("UserName");
    var hideHeader = ViewData["HideHeader"] as bool? ?? false;
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - Staff Panel</title>

    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/css/staff.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="staff-body">
    @if (!hideHeader)
    {
        <header id="header" class="header d-flex align-items-center fixed-top">
            <div class="header-container container-fluid container-xl d-flex align-items-center justify-content-between">
                <a asp-action="Index" asp-controller="Staff" class="logo d-flex align-items-center me-auto me-xl-0">
                    <h1 class="sitename">Staff Panel</h1>
                </a>

                @if (!string.IsNullOrEmpty(firstname))
                {
                    <nav id="user-nav" class="navmenu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="dropdown">
                                <a style="color: white;">
                                    <span style="color: white;">Welcome, @firstname</span>
                                    <i class="bi bi-chevron-down toggle-dropdown" style="color: white;"></i>
                                </a>
                                <ul>
                                    <li><a asp-action="Profile" asp-controller="AuthWeb">Profile</a></li>
                                    <li><a asp-action="Logout" asp-controller="AuthWeb">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                }
                else
                {
                    <nav id="navmenu" class="navmenu">
                        <ul>
                            <li><a asp-action="Login" asp-controller="AuthWeb">Login</a></li>
                        </ul>
                    </nav>
                }
            </div>
        </header>
    }

    <div class="staff-container">
        <div class="staff-sidebar">
            <div class="sidebar-header">
                <div class="user-info">
                    <div class="user-avatar"><i class="bi bi-person-circle"></i></div>
                    <div class="user-details">
                        <h6 style="color: white;">@firstname</h6>
                        <small style="color: white;">Staff</small>
                    </div>
                </div>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Staff" ? "active" : "")"
                           href="/Staff/Index">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "StaffBooking" ? "active" : "")"
                           href="/StaffBooking/Bookings">
                            <i class="bi bi-journal-check me-2"></i>Booking Management
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tours" ? "active" : "")"
                           href="/Staff/Tours">
                            <i class="bi bi-map me-2"></i>Tour List
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "StaffSchedule" ? "active" : "")"
                           href="/StaffSchedule/Schedules">
                            <i class="bi bi-calendar-event me-2"></i>Tour Schedule
                        </a>
                    </li>
                    <li class ="nav-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CancelCondition" ? "active" : "")"
                           href="/CancelCondition/Index">
                            <i class="bi bi-x-circle me-2"></i>Cancel Conditions
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "News" ? "active" : "")"
                           href="/Staff/News">
                            <i class="bi bi-newspaper me-2"></i>News
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <main class="staff-main">
            <div class="staff-content">
                <div class="content-header d-flex justify-content-between align-items-center mb-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-nav">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Staff/Index">Staff</a></li>
                            <li class="breadcrumb-item active">@ViewData["Title"]</li>
                        </ol>
                    </nav>
                </div>

                <partial name="_AlertMessages" />

                @RenderBody()
            </div>
        </main>
    </div>

    @if (!hideHeader)
    {
        <footer class="staff-footer">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; @DateTime.Now.Year Staff Panel. Welcome @firstname!</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="text-muted">Today: @DateTime.Now.ToString("MM/dd/yyyy")</span>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>     
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/js/staff.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.sidebar-nav .nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>