                {

                    string fallbackImageUrl = "/assets/img/blog/blog-hero-1.webp";
                    string imageUrl = string.IsNullOrEmpty(item.Image) ? fallbackImageUrl : item.Image;

                    <div class="col-md-4">
                        <div class="card h-100 shadow-lg border-0 news-card hover-lift">

