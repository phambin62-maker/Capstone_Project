                        </div>
                    </div>
                }
            </div>

            <nav class="mt-5">
                <ul class="pagination justify-content-center pagination-primary">
                    @{                      
                        string GetPageUrl(int pageNum)
                        {
                            return Url.Action("Index", "Blog", new
                            {
                                page = pageNum,
                                search = Model.Search,
                                fromDate = Model.FromDate?.ToString("yyyy-MM-dd"),
                                toDate = Model.ToDate?.ToString("yyyy-MM-dd")
                            });
                        }
                    }

                    @* Nút Previous *@
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           href="@GetPageUrl(Model.CurrentPage - 1)"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo; Trước</span>
                        </a>
                    </li>

                    @* Các nút số trang *@
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               href="@GetPageUrl(i)">
                                @i
                            </a>
                        </li>
                    }

                    @* Nút Next *@
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           href="@GetPageUrl(Model.CurrentPage + 1)"
                           aria-label="Next">
                            Tiếp &raquo;
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <div class="text-center text-muted py-5 empty-state">
                <i class="bi bi-search-heart-disabled fs-1"></i>
                <h3 class="mt-3">No posts found.</h3>
                <p>Try changing your search terms.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const form = document.querySelector(".filter-box form");
        const spinner = document.getElementById("loadingSpinner");
        const content = document.getElementById("blogContent");

        form.addEventListener("submit", () => {
            spinner.style.display = "block";
            content.style.opacity = "0.3";
        });
    </script>
}