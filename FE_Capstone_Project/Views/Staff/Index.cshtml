@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="staff-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Chào mừng đến Staff Panel</h5>
            </div>
            <div class="card-body">
                <p>Bạn đã truy cập thành công trang Staff!</p>
                <div class="row mt-4">
                    <div class="col-md-3 mb-2">
                        <a href="/Staff/Tours" class="btn btn-staff-primary w-100">
                            <i class="bi bi-map me-2"></i>Quản lý Tour
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="/Staff/Bookings" class="btn btn-staff-primary w-100">
                            <i class="bi bi-ticket-perforated me-2"></i>Đặt tour
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="/Staff/Customers" class="btn btn-staff-primary w-100">
                            <i class="bi bi-people me-2"></i>Khách hàng
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="/Staff/Schedules" class="btn btn-staff-primary w-100">
                            <i class="bi bi-calendar-event me-2"></i>Lịch trình
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>