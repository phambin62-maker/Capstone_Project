@model FE_Capstone_Project.Models.NewsCreateModel
@{
    ViewData["Title"] = "Create News";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("News", "Staff")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Come back
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateNews" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="UserId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title *</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter the article title..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewsStatus" class="form-label fw-bold">Status *</label>
                            <select asp-for="NewsStatus" class="form-select">
                                <option value="">-- Select status --</option>
                                <option value="Published">Published</option>
                                <option value="Draft">Draft</option>
                                <option value="Hidden">Hidden</option>
                            </select>
                            <span asp-validation-for="NewsStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Image (Optional)</label>

                            <div class="d-flex align-items-center p-2 border rounded bg-white">
                                <label for="customFile" class="btn btn-light border me-3" style="cursor: pointer;">
                                    Choose File
                                </label>

                                <span id="fileNameDisplay" class="text-muted fst-italic">No file chosen</span>

                                <input type="file" id="customFile" name="imageFile" class="d-none" accept="image/*"
                                       onchange="document.getElementById('fileNameDisplay').textContent = this.files[0] ? this.files[0].name : 'No file chosen'" />
                            </div>
                            <small class="text-muted mt-1 d-block">Select an image to display with the article.</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Contents*</label>
                            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Enter details..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Create News
                    </button>
                    <a href="@Url.Action("News", "Staff")" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}