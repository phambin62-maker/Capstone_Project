@model FE_Capstone_Project.Models.EditNewsModel
@{
    ViewData["Title"] = "Chỉnh sửa Tin tức";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("TestApi", "Staff")" class="btn btn-info me-2" target="_blank">
                <i class="bi bi-bug me-2"></i>Test API
            </a>
            <a href="@Url.Action("News", "Staff")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Alert -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Left -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Tiêu đề *</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-bold">User ID *</label>
                            <input asp-for="UserId" type="number" class="form-control" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewsStatus" class="form-label fw-bold">Trạng thái *</label>
                            <select asp-for="NewsStatus" class="form-select">
                                <option value="Hidden" selected="@(Model.NewsStatus == "Hidden")">Hidden (Ẩn)</option>
                                <option value="Published" selected="@(Model.NewsStatus == "Published")">Published (Đã đăng)</option>
                                <option value="Draft" selected="@(Model.NewsStatus == "Draft")">Draft (Nháp)</option>
                            </select>
                        </div>

                    </div>

                    <!-- Right -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-bold">Ảnh đại diện</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" name="imageFile" />
                            <small class="text-muted">Chọn ảnh mới để thay đổi ảnh hiện tại.</small>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3 text-center">
                                <label class="form-label fw-bold">Ảnh hiện tại</label><br />
                                <img src="@Model.ImageUrl" alt="Ảnh hiện tại" class="img-thumbnail rounded" style="max-height: 200px;" />
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Nội dung *</label>
                            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Cập nhật Tin
                    </button>
                    <a href="@Url.Action("News", "Staff")" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
