@model TourDetailModel
@{
    ViewData["Title"] = "Tour Details";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("Edit", "Staff", new { id = Model.Id })" class="btn btn-warning me-2">
                <i class="bi bi-pencil me-2"></i>Edit Tour
            </a>
            <a href="@Url.Action("Tours")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Basic Info -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%" class="fw-bold">Tour ID:</td>
                                    <td><span class="badge bg-secondary">#@Model.Id</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Tour Name:</td>
                                    <td><strong class="text-primary">@Model.Name</strong></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Price:</td>
                                    <td><span class="text-success fw-bold fs-5">@Model.Price.ToString("N0") VND</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Duration:</td>
                                    <td>@Model.Duration days</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Status:</td>
                                    <td>
                                        <span class="badge @(Model.TourStatus ? "bg-success" : "bg-danger")">
                                            @(Model.TourStatus ? "Active" : "Hidden")
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%" class="fw-bold">Start Location:</td>
                                    <td>@Model.StartLocationName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">End Location:</td>
                                    <td>@Model.EndLocationName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Category:</td>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Cancellation Policy:</td>
                                    <td>@Model.CancelConditionName</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Description -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-card-text me-2"></i>Detailed Description
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="card-text">@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted">No description available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Discount Info -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-percent me-2"></i>Discount Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Child Discount</h6>
                                <h4 class="text-info">@(Model.ChildDiscount?.ToString("N0") ?? "0")%</h4>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Group Discount</h6>
                                <h4 class="text-warning">@(Model.GroupDiscount?.ToString("N0") ?? "0")%</h4>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Group Number</h6>
                                <h4 class="text-success">@(Model.GroupNumber?.ToString() ?? "N/A")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Seats Info -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-people me-2"></i>Seat Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="mb-3">
                            <h6 class="text-muted">Minimum Seats</h6>
                            <h3 class="text-primary">@(Model.MinSeats?.ToString() ?? "N/A")</h3>
                        </div>
                        <div>
                            <h6 class="text-muted">Maximum Seats</h6>
                            <h3 class="text-primary">@(Model.MaxSeats?.ToString() ?? "N/A")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
