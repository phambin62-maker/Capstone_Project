@model TourCreateModel
@{
    ViewData["Title"] = "Thêm Tour Mới";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("Tours")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên Tour *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả *</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Giá (VND) *</label>
                            <input asp-for="Price" type="number" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label">Thời lượng (ngày)</label>
                            <input asp-for="Duration" type="number" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="StartLocationId" class="form-label">Điểm xuất phát *</label>
                            <select asp-for="StartLocationId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Locations, "Id", "LocationName"))">
                                <option value="">-- Chọn điểm xuất phát --</option>
                            </select>
                            <span asp-validation-for="StartLocationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndLocationId" class="form-label">Điểm đến *</label>
                            <select asp-for="EndLocationId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Locations, "Id", "LocationName"))">
                                <option value="">-- Chọn điểm đến --</option>
                            </select>
                            <span asp-validation-for="EndLocationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục *</label>
                            <select asp-for="CategoryId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "CategoryName"))">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CancelConditionId" class="form-label">Điều kiện hủy *</label>
                            <select asp-for="CancelConditionId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.CancelConditions, "Id", "Title"))">
                                <option value="">-- Chọn điều kiện hủy --</option>
                            </select>
                            <span asp-validation-for="CancelConditionId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="ChildDiscount" class="form-label">Giảm giá trẻ em (%)</label>
                        <input asp-for="ChildDiscount" type="number" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="GroupDiscount" class="form-label">Giảm giá nhóm (%)</label>
                        <input asp-for="GroupDiscount" type="number" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="GroupNumber" class="form-label">Số người nhóm</label>
                        <input asp-for="GroupNumber" type="number" class="form-control" />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <label asp-for="MinSeats" class="form-label">Số chỗ tối thiểu</label>
                        <input asp-for="MinSeats" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaxSeats" class="form-label">Số chỗ tối đa</label>
                        <input asp-for="MaxSeats" type="number" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 mt-3">
                    <label asp-for="Images" class="form-label">Hình ảnh tour</label>
                    <input asp-for="Images" type="file" multiple class="form-control" accept="image/*" />
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i>Thêm Tour
                </button>
                <a href="@Url.Action("Tours")" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
