@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Apply all filters - chuyển hướng với các tham số filter
            $('#applyFilters').on('click', function () {
                applyFiltersAndRedirect();
            });

            
            $('#searchInput').on('keyup', function (e) {
                if (e.keyCode === 13) { 
                    applyFiltersAndRedirect();
                }
            });

            $('#searchButton').on('click', function () {
                applyFiltersAndRedirect();
            });

            // Sort by Price - chuyển hướng khi thay đổi
            $('#sortByPrice').on('change', function () {
                applyFiltersAndRedirect();
            });

            // Reset filters - chuyển hướng về trang không có filter
            $('#resetFilters').on('click', function () {
                window.location.href = '@Url.Action("Tours")';
            });

            function applyFiltersAndRedirect() {
                var statusFilter = $('#statusFilter').val();
                var startLocationFilter = $('#startLocationFilter').val();
                var endLocationFilter = $('#endLocationFilter').val();
                var categoryFilter = $('#categoryFilter').val();
                var minPrice = $('#minPrice').val();
                var maxPrice = $('#maxPrice').val();
                var sortByPrice = $('#sortByPrice').val();
                var searchValue = $('#searchInput').val();

                // Xây dựng URL với các tham số filter
                var url = '@Url.Action("Tours", new { page = 1 })'; // Luôn về trang 1 khi filter
                
                // Thêm các tham số filter nếu có
                if (statusFilter) {
                    url += '&status=' + encodeURIComponent(statusFilter);
                }
                if (startLocationFilter) {
                    url += '&startLocation=' + encodeURIComponent(startLocationFilter);
                }
                if (endLocationFilter) {
                    url += '&endLocation=' + encodeURIComponent(endLocationFilter);
                }
                if (categoryFilter) {
                    url += '&category=' + encodeURIComponent(categoryFilter);
                }
                if (minPrice) {
                    url += '&minPrice=' + encodeURIComponent(minPrice);
                }
                if (maxPrice) {
                    url += '&maxPrice=' + encodeURIComponent(maxPrice);
                }
                if (sortByPrice) {
                    url += '&sort=' + encodeURIComponent(sortByPrice);
                }
                if (searchValue) {
                    url += '&search=' + encodeURIComponent(searchValue);
                }

                // Chuyển hướng đến URL mới
                window.location.href = url;
            }

            // Auto hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Hover effect for table rows
            $('#toursTable tbody tr').hover(
                function() { $(this).addClass('table-active'); },
                function() { $(this).removeClass('table-active'); }
            );
        });
    </script>

}