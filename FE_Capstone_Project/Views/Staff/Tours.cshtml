@model List<TourViewModel>
@{
    ViewData["Title"] = "Tour Management";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    var BASE_API_URL = "https://localhost:7160/api/";
    
    var totalTours = Model?.Count ?? 0;
    var activeTours = Model?.Count(t => t.TourStatus) ?? 0;
    var inactiveTours = Model?.Count(t => !t.TourStatus) ?? 0;
    var displayingTours = Model?.Count ?? 0;

    // Lấy các tham số filter từ URL
    var currentStatus = Context.Request.Query["status"].ToString();
    var currentStartLocation = Context.Request.Query["startLocation"].ToString();
    var currentEndLocation = Context.Request.Query["endLocation"].ToString();
    var currentCategory = Context.Request.Query["category"].ToString();
    var currentMinPrice = Context.Request.Query["minPrice"].ToString();
    var currentMaxPrice = Context.Request.Query["maxPrice"].ToString();
    var currentSort = Context.Request.Query["sort"].ToString();
    var currentSearch = Context.Request.Query["search"].ToString();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("Create", "Staff")" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add New Tour
            </a>
            <a href="@Url.Action("Tours")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-clockwise me-2"></i>Reload
            </a>
        </div>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <!-- Quick statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-primary">
                            <i class="bi bi-map"></i>
                        </div>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.TotalCount</h4>
                            <small class="text-muted">Total Tours</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-eye"></i>
                        </div>
                        <div class="ms-3">
                            <h4 class="mb-0">@activeTours</h4>
                            <small class="text-muted">Active</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-secondary">
                            <i class="bi bi-eye-slash"></i>
                        </div>
                        <div class="ms-3">
                            <h4 class="mb-0">@inactiveTours</h4>
                            <small class="text-muted">Inactive</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-info">
                            <i class="bi bi-clock"></i>
                        </div>
                        <div class="ms-3">
                            <h4 class="mb-0">@displayingTours</h4>
                            <small class="text-muted">Displayed</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-transparent">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="bi bi-list-ul me-2"></i>Tour List
                    </h5>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-flex justify-content-end gap-2">
                        <div class="input-group input-group-sm" style="width: 250px;">
                            <input type="text" class="form-control" placeholder="Search tour..." id="searchInput" value="@currentSearch">
                            <button class="btn btn-outline-secondary" type="button" id="searchButton">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>                        
                        <!-- Sort by Price -->
                        <select class="form-select form-select-sm" style="width: 180px;" id="sortByPrice">
                            <option value="">Sort by Price</option>
                            @if (currentSort == "asc")
                            {
                                <option value="asc" selected>Price: Low to High</option>
                                <option value="desc">Price: High to Low</option>
                            }
                            else if (currentSort == "desc")
                            {
                                <option value="asc">Price: Low to High</option>
                                <option value="desc" selected>Price: High to Low</option>
                            }
                            else
                            {
                                <option value="asc">Price: Low to High</option>
                                <option value="desc">Price: High to Low</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Advanced filters -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <small class="text-muted me-2"><strong>Filters:</strong></small>
                        <!-- Status filter -->
                        <select class="form-select form-select-sm" style="width: 180px;" id="statusFilter">
                            <option value="">All Status</option>
                            @if (currentStatus == "active")
                            {
                                <option value="active" selected>Active</option>
                                <option value="inactive">Inactive</option>
                            }
                            else if (currentStatus == "inactive")
                            {
                                <option value="active">Active</option>
                                <option value="inactive" selected>Inactive</option>
                            }
                            else
                            {
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            }
                        </select>
                        <!-- Start location filter -->
                        <select class="form-select form-select-sm" style="width: 180px;" id="startLocationFilter">
                            <option value="">All Start Locations</option>
                            @if (ViewBag.Locations != null)
                            {
                                foreach (var location in ViewBag.Locations)
                                {
                                    if (currentStartLocation == location.Id.ToString())
                                    {
                                        <option value="@location.Id" selected>@location.LocationName</option>
                                    }
                                    else
                                    {
                                        <option value="@location.Id">@location.LocationName</option>
                                    }
                                }
                            }
                        </select>

                        <!-- End location filter -->
                        <select class="form-select form-select-sm" style="width: 180px;" id="endLocationFilter">
                            <option value="">All End Locations</option>
                            @if (ViewBag.Locations != null)
                            {
                                foreach (var location in ViewBag.Locations)
                                {
                                    if (currentEndLocation == location.Id.ToString())
                                    {
                                        <option value="@location.Id" selected>@location.LocationName</option>
                                    }
                                    else
                                    {
                                        <option value="@location.Id">@location.LocationName</option>
                                    }
                                }
                            }
                        </select>

                        <!-- Category filter -->
                        <select class="form-select form-select-sm" style="width: 180px;" id="categoryFilter">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var category in ViewBag.Categories)
                                {
                                    if (currentCategory == category.Id.ToString())
                                    {
                                        <option value="@category.Id" selected>@category.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@category.Id">@category.CategoryName</option>
                                    }
                                }
                            }
                        </select>

                        <!-- Price range -->
                        <div class="input-group input-group-sm" style="width: 200px;">
                            <input type="number" class="form-control" placeholder="Min Price" id="minPrice" value="@currentMinPrice">
                            <input type="number" class="form-control" placeholder="Max Price" id="maxPrice" value="@currentMaxPrice">
                        </div>

                        <button class="btn btn-sm btn-outline-primary" id="applyFilters">
                            <i class="bi bi-funnel me-1"></i>Apply
                        </button>
            
                        <button class="btn btn-sm btn-outline-secondary" id="resetFilters">
                            <i class="bi bi-arrow-clockwise me-1"></i>Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No tours found</h5>
                    <p class="text-muted mb-4">Currently there are no tours in the system or an error occurred while loading data.</p>
                    <a href="@Url.Action("Tours")" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Reload
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="toursTable">
                        <thead class="table-light">
                            <tr>
                                <th width="100" class="text-center">Image</th>
                                <th>Tour Name</th>
                                <th width="150" class="text-center">Start Location</th>
                                <th width="150" class="text-center">End Location</th>
                                <th width="120" class="text-center">Category</th>
                                <th width="120" class="text-center">Price</th>
                                <th width="120" class="text-center">Duration</th>
                                <th width="120" class="text-center">Child Discount</th>
                                <th width="120" class="text-center">Group Discount</th>
                                <th width="150" class="text-center">Seats</th>
                                <th width="120" class="text-center">Status</th>
                                <th width="180" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tour in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @{
                                            var tourImage = tour.TourImages?.FirstOrDefault()?.Image;
                                            var imageUrl = !string.IsNullOrEmpty(tourImage) ? 
                                                $"{BASE_API_URL}Tour/GetImage?path={Uri.EscapeDataString(tourImage)}" 
                                                : $"{BASE_API_URL}Tour/GetImage?path=images/default-tour.jpg";
                                        }
                                        <div class="tour-image-container" style="width: 60px; height: 60px; margin: 0 auto;">
                                            <img src="@imageUrl" 
                                                 alt="@tour.Name" 
                                                 class="img-fluid rounded border"
                                                 style="width: 100%; height: 100%; object-fit: cover;"
                                                 onerror="this.src='@($"{BASE_API_URL}Tour/GetImage?path=images/default-tour.jpg")'">
                                        </div>
                                        <small class="text-muted d-block mt-1">#@tour.Id</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-start">
                                            <div class="me-3">
                                                <strong class="text-dark d-block">@tour.Name</strong>
                                                @if (!string.IsNullOrEmpty(tour.Description))
                                                {
                                                    <small class="text-muted">
                                                        @(tour.Description.Length > 100 ? tour.Description.Substring(0, 100) + "..." : tour.Description)
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (tour.StartLocation != null && !string.IsNullOrEmpty(tour.StartLocation.LocationName))
                                        {
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary">
                                                @tour.StartLocation.LocationName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                                ID: @tour.StartLocationId
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (tour.EndLocation != null && !string.IsNullOrEmpty(tour.EndLocation.LocationName))
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                                @tour.EndLocation.LocationName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                                ID: @tour.EndLocationId
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (tour.Category != null && !string.IsNullOrEmpty(tour.Category.CategoryName))
                                        {
                                            <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                                @tour.Category.CategoryName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                                ID: @tour.CategoryId
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold text-success">@tour.Price.ToString("N0") VND</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border">@tour.Duration days</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                            @(tour.ChildDiscount?.ToString("N0") ?? "0")%
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning">
                                            @(tour.GroupDiscount?.ToString("N0") ?? "0")%
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="seat-info">
                                            <small class="text-muted d-block">Min: <strong>@(tour.MinSeats?.ToString() ?? "N/A")</strong></small>
                                            <small class="text-muted d-block">Max: <strong>@(tour.MaxSeats?.ToString() ?? "N/A")</strong></small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(tour.TourStatus ? "bg-success" : "bg-secondary")">
                                            <i class="bi @(tour.TourStatus ? "bi-eye" : "bi-eye-slash") me-1"></i>
                                            @(tour.TourStatus ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-1">
                                            <a href="@Url.Action("TourDetails", "Staff", new { id = tour.Id })" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="View details"
                                               data-bs-toggle="tooltip">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Staff", new { id = tour.Id })" 
                                               class="btn btn-sm btn-outline-warning" 
                                               title="Edit tour"
                                               data-bs-toggle="tooltip">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("ToggleTourStatus", "Staff")" class="d-inline">
                                                <input type="hidden" name="id" value="@tour.Id" />
                                                <button type="submit" 
                                                        class="btn btn-sm @(tour.TourStatus ? "btn-outline-secondary" : "btn-outline-success")" 
                                                        title="@(tour.TourStatus ? "Hide tour" : "Show tour")"
                                                        data-bs-toggle="tooltip"
                                                        onclick="return confirm('Are you sure you want to @(tour.TourStatus ? "hide" : "show") tour \"@tour.Name\"?')">
                                                    <i class="bi @(tour.TourStatus ? "bi-eye-slash" : "bi-eye")"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="text-muted">
                            Showing <strong>@Model.Count</strong> tours of <strong>@ViewBag.TotalCount</strong> total
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <!-- Previous button -->
                                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Tours", new { 
                                        page = ViewBag.CurrentPage - 1, 
                                        pageSize = ViewBag.PageSize,
                                        status = currentStatus,
                                        startLocation = currentStartLocation,
                                        endLocation = currentEndLocation,
                                        category = currentCategory,
                                        minPrice = currentMinPrice,
                                        maxPrice = currentMaxPrice,
                                        sort = currentSort,
                                        search = currentSearch
                                    })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                <!-- Pages -->
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    if (i == 1 || i == ViewBag.TotalPages || (i >= ViewBag.CurrentPage - 1 && i <= ViewBag.CurrentPage + 1))
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Tours", new { 
                                                page = i, 
                                                pageSize = ViewBag.PageSize,
                                                status = currentStatus,
                                                startLocation = currentStartLocation,
                                                endLocation = currentEndLocation,
                                                category = currentCategory,
                                                minPrice = currentMinPrice,
                                                maxPrice = currentMaxPrice,
                                                sort = currentSort,
                                                search = currentSearch
                                            })">@i</a>
                                        </li>
                                    }
                                    else if (i == ViewBag.CurrentPage - 2 || i == ViewBag.CurrentPage + 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                <!-- Next button -->
                                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Tours", new { 
                                        page = ViewBag.CurrentPage + 1, 
                                        pageSize = ViewBag.PageSize,
                                        status = currentStatus,
                                        startLocation = currentStartLocation,
                                        endLocation = currentEndLocation,
                                        category = currentCategory,
                                        minPrice = currentMinPrice,
                                        maxPrice = currentMaxPrice,
                                        sort = currentSort,
                                        search = currentSearch
                                    })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
        </div>
    </div>
</div>

