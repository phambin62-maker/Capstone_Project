@model TourEditModel
@{
    ViewData["Title"] = "Chỉnh sửa Tour";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <a href="@Url.Action("Tours")" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên Tour *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả *</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Giá (VND) *</label>
                            <input asp-for="Price" type="number" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label">Thời lượng *</label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="StartLocationId" class="form-label">ID Điểm xuất phát *</label>
                            <input asp-for="StartLocationId" type="number" class="form-control" />
                            <span asp-validation-for="StartLocationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndLocationId" class="form-label">ID Điểm đến *</label>
                            <input asp-for="EndLocationId" type="number" class="form-control" />
                            <span asp-validation-for="EndLocationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">ID Danh mục *</label>
                            <input asp-for="CategoryId" type="number" class="form-control" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CancelConditionId" class="form-label">ID Điều kiện hủy *</label>
                            <input asp-for="CancelConditionId" type="number" class="form-control" />
                            <span asp-validation-for="CancelConditionId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="ChildDiscount" class="form-label">Giảm giá trẻ em (%)</label>
                            <input asp-for="ChildDiscount" type="number" class="form-control" />
                            <span asp-validation-for="ChildDiscount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="GroupDiscount" class="form-label">Giảm giá nhóm (%)</label>
                            <input asp-for="GroupDiscount" type="number" class="form-control" />
                            <span asp-validation-for="GroupDiscount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="GroupNumber" class="form-label">Số người nhóm</label>
                            <input asp-for="GroupNumber" type="number" class="form-control" />
                            <span asp-validation-for="GroupNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MinSeats" class="form-label">Số chỗ tối thiểu</label>
                            <input asp-for="MinSeats" type="number" class="form-control" />
                            <span asp-validation-for="MinSeats" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MaxSeats" class="form-label">Số chỗ tối đa</label>
                            <input asp-for="MaxSeats" type="number" class="form-control" />
                            <span asp-validation-for="MaxSeats" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Images" class="form-label">Hình ảnh tour mới (Tùy chọn)</label>
                    <input asp-for="Images" type="file" multiple class="form-control" accept="image/*" />
                    <small class="text-muted">Chọn ảnh mới để thay thế ảnh cũ</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Cập nhật Tour
                    </button>
                    <a href="@Url.Action("Tours")" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}