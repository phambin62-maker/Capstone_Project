@model FE_Capstone_Project.Models.NewsListViewModel
@using Microsoft.AspNetCore.Routing
@{
    ViewData["Title"] = "News Management";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    // Đã bao gồm TimeZoneInfo (GMT+7)
    TimeZoneInfo vietnamZone = TimeZoneInfo.FindSystemTimeZoneById("SE Asia Standard Time");
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <a href="@Url.Action("CreateNews", "Staff")" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> Create new news
        </a>
    </div>

    @if (ViewBag.NewsStats != null)
    {
        var stats = (NewsStatsDTO)ViewBag.NewsStats;
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0"><span class="bg-primary text-white p-3 rounded-3 d-inline-flex"><i class="bi bi-newspaper fs-3"></i></span></div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="fw-bold mb-0">@stats.Total</h4> <p class="card-text text-muted mb-0">Total News</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0"><span class="bg-success text-white p-3 rounded-3 d-inline-flex"><i class="bi bi-check-circle fs-3"></i></span></div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="fw-bold mb-0">@stats.Published</h4> <p class="card-text text-muted mb-0">Published</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0"><span class="bg-warning text-white p-3 rounded-3 d-inline-flex"><i class="bi bi-pencil-square fs-3"></i></span></div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="fw-bold mb-0">@stats.Draft</h4> <p class="card-text text-muted mb-0">Draft</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0"><span class="bg-secondary text-white p-3 rounded-3 d-inline-flex"><i class="bi bi-eye-slash fs-3"></i></span></div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="fw-bold mb-0">@stats.Hidden</h4> <p class="card-text text-muted mb-0">Hidden</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-bold">Search & Filter</div>
        <div class="card-body">
            <form method="get" asp-action="News" asp-controller="Staff" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Title / Author</label>
                    <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Keyword..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">From date</label>
                    <input type="date" name="fromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">To date</label>
                    <input type="date" name="toDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">-- All status --</option>
                        <option value="Published" selected="@("Published".Equals(Model.Status, StringComparison.OrdinalIgnoreCase))">Published</option>
                        <option value="Draft" selected="@("Draft".Equals(Model.Status, StringComparison.OrdinalIgnoreCase))">Draft</option>
                        <option value="Hidden" selected="@("Hidden".Equals(Model.Status, StringComparison.OrdinalIgnoreCase))">Hidden</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("News", "Staff")" class="btn btn-outline-secondary flex-fill me-2">
                            <i class="bi bi-x-circle me-1"></i> Clear filter
                        </a>
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-funnel-fill me-1"></i> Filter data
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="loadingSpinner" class="text-center my-5" style="display:none;">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted">Loading news...</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.NewsList == null || !Model.NewsList.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-info-circle fs-3 text-muted"></i>
                    <p class="text-muted mb-0 mt-2">There is no news yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="display:none;">#</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Created Date</th>
                                <th>Updated Date</th>
                                <th>Updated By</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in Model.NewsList)
                            {
                                // THÊM: Logic chuyển đổi thời gian (UTC -> GMT+7)
                                DateTime createdDateLocal = news.CreatedDate.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(news.CreatedDate.Value, vietnamZone) : DateTime.MinValue;
                                DateTime? updatedDateLocal = news.UpdatedDate.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(news.UpdatedDate.Value, vietnamZone) : (DateTime?)null;

                                <tr>
                                    <td style="display:none;">@news.Id</td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(news.Image))
                                        {
                                            <img src="@news.Image" alt="News Image" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </td>

                                    <td class="fw-semibold text-truncate-custom" style="max-width: 150px;">
                                        @{
                                            string fullTitle = news.Title ?? "";
                                            string displayTitle = fullTitle.Length > 20 ? fullTitle.Substring(0, 20) + "..." : fullTitle;
                                        }
                                        <span title="@fullTitle" data-bs-toggle="tooltip">@displayTitle</span>
                                    </td>

                                    <td>@news.AuthorName</td>

                                    <td>@(createdDateLocal == DateTime.MinValue ? "N/A" : createdDateLocal.ToString("dd/MM/yyyy HH:mm"))</td>

                                    <td>@(updatedDateLocal.HasValue ? updatedDateLocal.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                                    <td>@(news.UpdatedAuthor ?? "N/A")</td>

                                    <td>
                                        @{
                                            var status = news.NewsStatus?.ToLowerInvariant();
                                            string badgeClass = status switch
                                            {
                                                "published" => "badge bg-success",
                                                "draft" => "badge bg-warning text-dark",
                                                "hidden" => "badge bg-secondary",
                                                _ => "badge bg-light text-dark"
                                            };

                                            string badgeText = status switch
                                            {
                                                "published" => "Published",
                                                "draft" => "Draft",
                                                "hidden" => "Hidden",
                                                _ => "Unknown"
                                            };
                                        }
                                        <span class="@badgeClass">@badgeText</span>
                                    </td>

                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a href="@Url.Action("EditNews", "Staff", new { id = news.Id })"
                                               class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="DeleteNews" asp-controller="Staff" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@news.Id" />
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger"
                                                        title="Delete news"
                                                        onclick="return confirm('Are you sure you want to delete this news?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>

                                            <a href="@Url.Action("ViewNews", "Staff", new { id = news.Id })"
                                               class="btn btn-sm btn-outline-secondary" title="See details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-end">
                            @{
                                string GetPageUrl(int pageNum)
                                {
                                    return Url.Action("News", "Staff", new
                                    {
                                        page = pageNum,
                                        search = Model.Search,
                                        fromDate = Model.FromDate?.ToString("yyyy-MM-dd"),
                                        toDate = Model.ToDate?.ToString("yyyy-MM-dd"),
                                        status = Model.Status
                                    });
                                }
                            }

                            @* Previous Button *@
                            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                <a class="page-link"
                                   href="@GetPageUrl(Model.CurrentPage - 1)"
                                   aria-label="Previous">
                                    Previous page
                                </a>
                            </li>

                            @* Page Numbers *@
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       href="@GetPageUrl(i)">
                                        @i
                                    </a>
                                </li>
                            }

                            @* Next Button *@
                            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link"
                                   href="@GetPageUrl(Model.CurrentPage + 1)"
                                   aria-label="Next">
                                    Next page
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Kích hoạt Bootstrap Tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });

        // Đảm bảo Spinner hoạt động
        const form = document.querySelector(".card-body form");
        const spinner = document.getElementById("loadingSpinner");
        const table = document.querySelector(".table-responsive");

        if (form && table) {
            form.addEventListener("submit", () => {
                if (spinner) {
                    spinner.style.display = "block";
                }
                table.style.opacity = "0.3";
            });
        }
    </script>    
}
<div id="loadingSpinner" class="text-center my-5" style="display:none;">
    <div class="spinner-border text-primary" role="status"></div>
    <p class="mt-2 text-muted">Loading news...</p>
</div>