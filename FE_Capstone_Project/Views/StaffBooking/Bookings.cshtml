@using BE_Capstone_Project.Application.BookingManagement.DTOs
@using BE_Capstone_Project.Domain.Enums
@model List<BookingDTO>
@{
    ViewData["Title"] = "Quản lý Booking";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    var currentSearchTerm = ViewBag.CurrentSearchTerm as string;
    var currentBookingStatus = ViewBag.CurrentBookingStatus as BookingStatus?;
    var currentPaymentStatus = ViewBag.CurrentPaymentStatus as PaymentStatus?;
    var bookingStatuses = ViewBag.BookingStatuses as List<BookingStatus> ?? new List<BookingStatus>();
    var paymentStatuses = ViewBag.PaymentStatuses as List<PaymentStatus> ?? new List<PaymentStatus>();
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
        </div>
        <div class="card-body">
            <form method="get" id="filterForm">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="searchTerm">Tìm kiếm</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   value="@currentSearchTerm" placeholder="Tên, email, tour...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="bookingStatus">Trạng thái Booking</label>
                            <select class="form-control" id="bookingStatus" name="bookingStatus">
                                <option value="">Tất cả</option>
                                @foreach (var status in bookingStatuses)
                                {
                                    <option value="@status" selected="@(currentBookingStatus == status)">@status</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="paymentStatus">Trạng thái Thanh toán</label>
                            <select class="form-control" id="paymentStatus" name="paymentStatus">
                                <option value="">Tất cả</option>
                                @foreach (var status in paymentStatuses)
                                {
                                    <option value="@status" selected="@(currentPaymentStatus == status)">@status</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group d-flex align-items-end">
                            <button type="submit" class="btn btn-primary mr-2">
                                <i class="bi bi-search"></i> Tìm kiếm
                            </button>
                            <a href="@Url.Action("Bookings")" class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Reset
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Booking</h6>
            <div>
                <span class="text-muted">
                    Hiển thị @Model.Count kết quả
                    @if (ViewBag.TotalCount > 0)
                    {
                        <text>(Tổng cộng @ViewBag.TotalCount)</text>
                    }
                </span>
            </div>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="bookingsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Khách hàng</th>
                                <th>Tour</th>
                                <th>Ngày Booking</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái Booking</th>
                                <th>Trạng thái Thanh toán</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.Id</td>
                                    <td>
                                        <div>@booking.FullName</div>
                                        <small class="text-muted">@booking.Email</small>
                                    </td>
                                    <td>@booking.TourName</td>
                                    <td>@booking.BookingDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@booking.TotalPrice?.ToString("N0") VND</td>
                                    <td>
                                        <span class="badge @GetBookingStatusBadge(booking.BookingStatus)">
                                            @booking.BookingStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @GetPaymentStatusBadge(booking.PaymentStatus)">
                                            @booking.PaymentStatus
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = booking.Id })" 
                                           class="btn btn-sm btn-info" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (booking.BookingStatus != BookingStatus.Cancelled)
                                        {
                                            <button type="button" class="btn btn-sm btn-warning" 
                                                    onclick="cancelBooking(@booking.Id)" title="Hủy booking">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" 
                                       href="@Url.Action("Bookings", new { 
                                           searchTerm = currentSearchTerm,
                                           bookingStatus = currentBookingStatus,
                                           paymentStatus = currentPaymentStatus,
                                           page = i, 
                                           pageSize = ViewBag.PageSize 
                                       })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-inbox fa-3x text-muted"></i>
                    <h5 class="mt-3">Không tìm thấy booking nào</h5>
                    <p class="text-muted">Hãy thử điều chỉnh bộ lọc để tìm kiếm kết quả khác.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelBooking(bookingId) {
            if (confirm('Bạn có chắc chắn muốn hủy booking này?')) {
                var note = prompt('Lý do hủy (không bắt buộc):');
                
                $.post('@Url.Action("CancelBooking")', { 
                    id: bookingId, 
                    note: note 
                })
                .done(function(response) {
                    location.reload();
                })
                .fail(function(xhr, status, error) {
                    alert('Lỗi khi hủy booking: ' + error);
                });
            }
        }

        function getBookingStatusBadge(status) {
            const statusMap = {
                'Pending': 'badge-warning',
                'Confirmed': 'badge-success',
                'Cancelled': 'badge-danger',
                'Completed': 'badge-info'
            };
            return statusMap[status] || 'badge-secondary';
        }

        function getPaymentStatusBadge(status) {
            const statusMap = {
                'Pending': 'badge-warning',
                'Paid': 'badge-success',
                'Failed': 'badge-danger',
                'Refunded': 'badge-info'
            };
            return statusMap[status] || 'badge-secondary';
        }
    </script>
}

@functions {
    public string GetBookingStatusBadge(BookingStatus? status)
    {
        return status switch
        {
            BookingStatus.Pending => "badge-warning",
            BookingStatus.Confirmed => "badge-success",
            BookingStatus.Cancelled => "badge-danger",
            BookingStatus.Completed => "badge-info",
            _ => "badge-secondary"
        };
    }

    public string GetPaymentStatusBadge(PaymentStatus? status)
    {
        return status switch
        {
            PaymentStatus.Pending => "badge-warning",
            PaymentStatus.Completed => "badge-success",
            PaymentStatus.Failed => "badge-danger",
            PaymentStatus.Refunded => "badge-info",
            _ => "badge-secondary"
        };
    }
}