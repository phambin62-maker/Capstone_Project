@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // === KHAI BÁO BIẾN TOÀN CỤC ===
        let revenueChartInstance;
        let tourChartInstance;

        // === LẤY DỮ LIỆU TỪ CONTROLLER (RAZOR) ===
        const API_BASE_URL = '@ViewBag.ApiBaseUrl'; // Từ AdminWebController
        const JWT_TOKEN = '@ViewBag.JwtToken';      // Từ AdminWebController

        // === HÀM HELPER ===

        function getAuthHeader() {
            if (!JWT_TOKEN) {
                console.error('Không tìm thấy token!');
                alert('Phiên đăng nhập hết hạn. Đang chuyển về trang đăng nhập.');
                window.location.href = '/AuthWeb/Login'; // Điều chỉnh nếu cần
                return {};
            }
            return {
                'Authorization': `Bearer ${JWT_TOKEN}`,
                'Content-Type': 'application/json'
            };
        }
        function formatCurrencyVND(value) {
            if (value === null || value === undefined) return "0 VNĐ";
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
        }
        function formatPercentage(value) {
            if (value === null || value === undefined) return "0%";
            return (value * 100).toFixed(1) + '%';
        }
        function formatNumber(value) {
            if (value === null || value === undefined) return "0";
            return new Intl.NumberFormat('vi-VN').format(value);
        }

        // === HÀM ẨN/HIỆN CÁC KHỐI BÁO CÁO (MỚI) ===
        function toggleReportBlocks(reportType) {
            const overviewBlock = document.getElementById('overviewBlock');
            const chartsBlock = document.getElementById('chartsBlock');
            const tablesBlock = document.getElementById('tablesBlock');
            const customerBlock = document.getElementById('customerBlock');

            // Tách các khối con
            const revenueChartBlock = document.getElementById('revenueChartBlock');
            const tourChartBlock = document.getElementById('tourChartBlock');
            const monthlyRevenueTableBlock = document.getElementById('monthlyRevenueTableBlock');
            const topToursTableBlock = document.getElementById('topToursTableBlock');

            // Ẩn tất cả các khối chính trước
            overviewBlock.classList.add('d-none');
            chartsBlock.classList.add('d-none');
            tablesBlock.classList.add('d-none');
            customerBlock.classList.add('d-none');

            // Ẩn các khối con
            revenueChartBlock.classList.add('d-none');
            tourChartBlock.classList.add('d-none');
            monthlyRevenueTableBlock.classList.add('d-none');
            topToursTableBlock.classList.add('d-none');


            // Luôn hiển thị 4 thẻ tổng quan
            overviewBlock.classList.remove('d-none');

            // Hiển thị các khối dựa trên lựa chọn
            if (reportType === 'all') {
                chartsBlock.classList.remove('d-none');
                tablesBlock.classList.remove('d-none');
                customerBlock.classList.remove('d-none');

                // Hiển thị tất cả khối con
                revenueChartBlock.classList.remove('d-none');
                tourChartBlock.classList.remove('d-none');
                monthlyRevenueTableBlock.classList.remove('d-none');
                topToursTableBlock.classList.remove('d-none');

            } else if (reportType === 'revenue') {
                chartsBlock.classList.remove('d-none');
                tablesBlock.classList.remove('d-none');

                revenueChartBlock.classList.remove('d-none'); // Chỉ hiện biểu đồ doanh thu
                monthlyRevenueTableBlock.classList.remove('d-none'); // Chỉ hiện bảng doanh thu

            } else if (reportType === 'booking') {
                chartsBlock.classList.remove('d-none');
                tablesBlock.classList.remove('d-none');

                tourChartBlock.classList.remove('d-none'); // Chỉ hiện biểu đồ tour
                topToursTableBlock.classList.remove('d-none'); // Chỉ hiện bảng tour

            } else if (reportType === 'customer') {
                customerBlock.classList.remove('d-none');
            }
        }


        // === CÁC HÀM CẬP NHẬT UI (Không đổi) ===
        function updateOverviewCards(data) {
            document.getElementById('statTotalRevenue').textContent = formatCurrencyVND(data.totalRevenue);
            document.getElementById('statTotalBookings').textContent = formatNumber(data.totalBookings);
            document.getElementById('statAvgRating').textContent = (data.averageRating || 0).toFixed(1) + '/5.0';
        }

        function updateCustomerAnalysis(data) {
            document.getElementById('statTotalCustomersAllTime').textContent = formatNumber(data.totalCustomers);
            document.getElementById('statLoyalCustomers').textContent = formatNumber(data.loyalCustomers);
            document.getElementById('statNewCustomersMonth').textContent = formatNumber(data.newCustomersInRange);
            document.getElementById('statReturnRate').textContent = formatPercentage(data.returnRate);
            document.getElementById('statNewCustomers').textContent = formatNumber(data.newCustomersInRange);
        }

        function updateTopToursTable(data) {
            const tableBody = document.querySelector("#topToursTable tbody");
            if (!tableBody) return;
            tableBody.innerHTML = '';
            if (!data || data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="4" class="text-center">Không có dữ liệu.</td></tr>';
                return;
            }
            let rank = 1;
            for (const tour of data) {
                const row = `
                            <tr>
                                <td>
                                    <span class="badge ${rank == 1 ? 'bg-warning text-dark' : (rank == 2 ? 'bg-secondary' : (rank == 3 ? 'bg-danger' : 'bg-info'))}">
                                        <i class="bi ${rank <= 3 ? 'bi-trophy-fill' : 'bi-bookmark-star'}"></i> ${rank++}
                                    </span>
                                </td>
                                <td>${tour.tourName}</td>
                                <td class="text-center">${formatNumber(tour.bookingsCount)}</td>
                                <td class="text-end">${formatCurrencyVND(tour.revenue)}</td>
                            </tr>
                        `;
                tableBody.insertAdjacentHTML('beforeend', row);
            }
        }

        function updateMonthlyRevenueTable(data) {
            const tableBody = document.querySelector("#monthlyRevenueTable tbody");
            if (!tableBody) return;
            tableBody.innerHTML = '';
            if (!data || data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="3" class="text-center">Không có dữ liệu cho năm này.</td></tr>';
                return;
            }
            const monthNames = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"];
            data.sort((a, b) => b.month - a.month);
            for (const monthData of data) {
                const row = `
                            <tr>
                                <td>${monthNames[monthData.month - 1]} / ${monthData.year}</td>
                                <td class="text-center">${formatNumber(monthData.bookingsCount)}</td>
                                <td class="text-end">${formatCurrencyVND(monthData.totalRevenue)}</td>
                            </tr>
                        `;
                tableBody.insertAdjacentHTML('beforeend', row);
            }
        }

        function updateRevenueChart(data) {
            const ctx = document.getElementById('revenueChart').getContext('2d');
            const labels = ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'];
            const monthlyData = new Array(12).fill(0);
            for (const month of data) {
                monthlyData[month.month - 1] = month.totalRevenue / 1000000;
            }
            const chartData = {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu (triệu VNĐ)',
                    data: monthlyData,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            };
            if (revenueChartInstance) {
                revenueChartInstance.data = chartData;
                revenueChartInstance.update();
            } else {
                revenueChartInstance = new Chart(ctx, { type: 'line', data: chartData, options: { /* ... options ... */ } });
            }
        }

        function updateTourChart(data) {
            const ctx = document.getElementById('tourChart').getContext('2d');
            const labels = data.map(t => t.tourName);
            const bookings = data.map(t => t.bookingsCount);
            const chartData = {
                labels: labels,
                datasets: [{
                    data: bookings,
                    backgroundColor: [
                        'rgba(0, 123, 255, 0.8)',  // Xanh dương
                        'rgba(40, 167, 69, 0.8)',   // Xanh lá
                        'rgba(255, 193, 7, 0.8)',   // Vàng
                        'rgba(23, 162, 184, 0.8)',  //  Xanh mòng két (Teal)
                        'rgba(220, 53, 69, 0.8)'    //  Đỏ
                    ]
                }]
            };
            if (tourChartInstance) {
                tourChartInstance.data = chartData;
                tourChartInstance.update();
            } else {
                tourChartInstance = new Chart(ctx, { type: 'doughnut', data: chartData, options: { /* ... options ... */ } });
            }
        }

        // === HÀM TẢI DỮ LIỆU CHÍNH (ĐÃ CẬP NHẬT) ===
        async function loadDashboardData() {
            const from = document.getElementById('fromDate').value;
            const to = document.getElementById('toDate').value;
            const reportType = document.getElementById('reportTypeSelect').value; // Đọc giá trị dropdown

            if (!from || !to) {
                alert('Vui lòng chọn Từ ngày và Đến ngày');
                return;
            }

            const year = new Date(from).getFullYear();
            const headers = getAuthHeader();
            const searchButton = document.getElementById('searchButton');

            // 1. Ẩn/hiện các khối trước khi tải
            toggleReportBlocks(reportType);

            try {
                searchButton.disabled = true;
                searchButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang tải...';

                // 2. Chuẩn bị các promise
                let overviewPromise = null;
                let topToursPromise = null;
                let monthlyPromise = null;
                let customerPromise = null;

                // Luôn tải Overview và Customer (vì overview cards cần cả hai)
                overviewPromise = fetch(`${API_BASE_URL}/api/reports/overview?from=${from}&to=${to}&topN=5`, { headers }).then(res => res.json());
                customerPromise = fetch(`${API_BASE_URL}/api/reports/customer-analysis?from=${from}&to=${to}`, { headers }).then(res => res.json());

                if (reportType === 'all' || reportType === 'booking') {
                    topToursPromise = fetch(`${API_BASE_URL}/api/reports/top-tours?from=${from}&to=${to}&topN=5`, { headers }).then(res => res.json());
                }
                if (reportType === 'all' || reportType === 'revenue') {
                    monthlyPromise = fetch(`${API_BASE_URL}/api/reports/monthly?year=${year}`, { headers }).then(res => res.json());
                }

                // 3. Chờ các promise cần thiết
                const overviewData = await overviewPromise;
                const customerData = await customerPromise;

                updateOverviewCards(overviewData);
                updateCustomerAnalysis(customerData);

                if (topToursPromise) {
                    const topToursData = await topToursPromise;
                    updateTopToursTable(topToursData);
                    updateTourChart(topToursData);
                }

                if (monthlyPromise) {
                    const monthlyData = await monthlyPromise;
                    updateMonthlyRevenueTable(monthlyData);
                    updateRevenueChart(monthlyData);
                }

            } catch (error) {
                console.error('Lỗi khi tải dashboard:', error);
                alert(error.message || 'Đã xảy ra lỗi không xác định.');
            } finally {
                searchButton.disabled = false;
                searchButton.innerHTML = '<i class="bi bi-search me-2"></i>Tìm kiếm';
            }
        }

        // === HÀM XUẤT EXCEL (Không đổi) ===
        async function exportToExcel() {
            // (Giữ nguyên logic export, nó vẫn export theo API 'export'
            // bất kể dropdown đang chọn gì)
            const from = document.getElementById('fromDate').value;
            const to = document.getElementById('toDate').value;
            if (!from || !to) { alert('Vui lòng chọn Từ ngày và Đến ngày'); return; }
            const headers = getAuthHeader();
            const button = document.getElementById('exportButton');

            try {
                button.disabled = true;
                button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang xuất...';
                const response = await fetch(`${API_BASE_URL}/api/reports/export?from=${from}&to=${to}`, { headers });
                if (!response.ok) throw new Error('Lỗi khi xuất file Excel.');
                const blob = await response.blob();
                const contentDisposition = response.headers.get('content-disposition');
                let fileName = `Revenue_Overview_${from}_${to}.xlsx`;
                if (contentDisposition) {
                    const fileNameMatch = contentDisposition.match(/filename="(.+)"/);
                    if (fileNameMatch && fileNameMatch.length === 2) fileName = fileNameMatch[1];
                }
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none'; a.href = url; a.download = fileName;
                document.body.appendChild(a); a.click();
                window.URL.revokeObjectURL(url); a.remove();
            } catch (error) {
                console.error('Lỗi khi xuất Excel:', error);
                alert(error.message || 'Đã xảy ra lỗi không xác định.');
            } finally {
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel';
            }
        }

        // === HÀM IN ẤN (Không đổi) ===
        function printReport() {
            window.print();
        }

        // === GẮN SỰ KIỆN ===
        document.addEventListener('DOMContentLoaded', () => {
            const today = new Date();
            const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
            document.getElementById('fromDate').value = firstDayOfMonth.toISOString().split('T')[0];
            document.getElementById('toDate').value = today.toISOString().split('T')[0];

            // Gắn sự kiện click
            document.getElementById('searchButton').addEventListener('click', loadDashboardData);
            document.getElementById('exportButton').addEventListener('click', exportToExcel);
            document.getElementById('printButton').addEventListener('click', printReport);

            // Gắn sự kiện change cho dropdown (MỚI)
            const reportTypeSelect = document.getElementById('reportTypeSelect');
            reportTypeSelect.addEventListener('change', () => {
                toggleReportBlocks(reportTypeSelect.value);
            });

