@{
    ViewData["Title"] = "Báo cáo & Thống kê";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@media print {
        .no-print {
            display: none !important;
        }
        header,
        nav,
        footer,
        .admin-header,
        .admin-sidebar,
        .admin-footer,
        .navbar,
        #header,
        .header,
        #main-nav,
        #top-bar,
        .top-bar {
            display: none !important;
        }
        body,
        .main-content,
        .container-fluid {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }
 
        .admin-card {
            border: 1px solid #dee2e6 !important; 
            box-shadow: none !important; 
            page-break-inside: avoid; 
        }
        
        canvas {
            max-width: 100% !important;
        }
    }
</style>

<div class="row mb-4 no-print">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Báo cáo & Thống kê</h2>
            <div>
                <button class="btn btn-outline-secondary me-2" id="printButton">
                    <i class="bi bi-printer me-2"></i>In báo cáo
                </button>
                <button class="btn btn-success" id="exportButton">
                    <i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Date Filter -->

<div class="row mb-4 no-print">
    <div class="col-12">
        <div class="admin-card">
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" class="form-control" id="fromDate">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" class="form-control" id="toDate">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Loại báo cáo</label>
                        <!-- Gỡ 'disabled' và thêm id/options -->
                        <select class="form-select" id="reportTypeSelect">
                            <option value="all">Tất cả</option>
                            <option value="revenue">Chỉ xem Doanh thu</option>
                            <option value="booking">Chỉ xem Đặt tour</option>
                            <option value="customer">Chỉ xem Khách hàng</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary w-100" id="searchButton">
                            <i class="bi bi-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Overview Statistics -->
