@model FE_Capstone_Project.Models.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>Forgot Password</h1>
                <p>Enter your email to retrieve your security question.</p>
            </div>

            <form asp-action="ForgotPassword" asp-controller="AuthWeb" method="post" class="login-form">
                
                <div class="form-group">
                    <input type="email" id="email" name="Email" value="@Model?.Email" required placeholder="Enter your email" class="form-control" />
                    <label for="email">Email Address</label>
                </div>

                <div class="form-options">
                    <a href="@Url.Action("Login", "AuthWeb")" class="forgot-link">Back to Login</a>
                </div>

                <button type="submit" class="login-btn">
                    <span class="btn-text">Next</span>
                </button>

                @if (TempData["Error"] != null)
                {
                    <p style="margin-top: 10px; text-align:center; color:red;">@TempData["Error"]</p>
                }
                @if (!string.IsNullOrEmpty(Model?.Error))
                {
                    <p style="margin-top: 10px; text-align:center; color:red;">@Model.Error</p>
                }
            </form>
        </div>
    </div>
</body>
</html>
