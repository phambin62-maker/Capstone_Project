@model FE_Capstone_Project.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Profile</title>

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        /* KHÔNG chặn cuộn toàn trang */
        html, body {
            height: auto;
            margin: 0;
            overflow: auto;
        }

        /* Giữ phần profile cố định giữa màn hình */
        .profile-wrapper {
            min-height: 90vh; /* đủ cao nhưng không đè footer */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 30px;
            max-width: 900px;
            width: 100%;
        }

        input[readonly] {
            background-color: #f9f9f9;
            border: none;
            cursor: pointer;
        }

        input.editable {
            border: 1px solid #ffc107 !important;
            background-color: #fff !important;
        }

        .profile-button {
            background: #0d6efd;
            border: none;
            transition: 0.3s;
        }

            .profile-button:hover {
                background: #0b5ed7;
            }
    </style>


</head>

<body>
    <div class="profile-wrapper">
    <div class="container rounded bg-white mt-5 mb-5 shadow">
    <div class="row">
            <!-- Avatar -->
            <div class="col-md-3 border-end d-flex flex-column align-items-center text-center p-4">
                <img class="rounded-circle mt-3 mb-2" width="150px"
                     src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" />
                <span class="fw-bold">User Name: @Model?.Username</span>
                <span class="text-muted">@Model?.Email</span>
            </div>

            <!-- Form -->
            <div class="col-md-9">
                <div class="p-4">
                    @if (Model != null)
                    {
                        <h4 class="mb-4">Profile Settings</h4>
                            <form method="post" asp-controller="AuthWeb"  asp-action="Profile">
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input asp-for="FirstName" type="text" class="form-control user-input" value="@Model.FirstName" readonly />
        </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input asp-for="LastName" type="text" class="form-control user-input" value="@Model.LastName" readonly />
                </div>
                <div class="row mt-3">
                                <div class="col-md-12">
                                    <label class="form-label">Mobile Number</label>
                                    <input asp-for="PhoneNumber" type="text" class="form-control user-input" value="@Model.PhoneNumber" readonly />
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">New Password</label>
                                     <input asp-for="NewPassword" type="text" class="form-control user-input" value="" readonly />
                                </div>
               

                            <div class="mt-4 text-center">
                                <button class="btn btn-primary profile-button" type="submit">💾 Save Profile</button>
            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">Vui lòng chỉnh sửa thông tin trên Gmail của bạn .</div>
                    }
        </div>
       
    </div>
</div>

            <!-- SweetAlert2 CDN -->
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

            <script>
                // Cho phép click để chỉnh sửa
                document.querySelectorAll('.user-input').forEach(input => {
                    input.addEventListener('click', function () {
                        if (this.hasAttribute('readonly')) {
                            this.removeAttribute('readonly');
                            this.classList.add('editable');
                        }
                    });

                    // Chỉ cho nhập số và giới hạn 10 số ở PhoneNumber
                    input.addEventListener('input', function () {
                        if (this.getAttribute('name') === "PhoneNumber") {
                            this.value = this.value.replace(/\D/g, ''); // chỉ số
                            if (this.value.length > 10) this.value = this.value.slice(0, 10);
                        }
                    });

                    // Kiểm tra khi người dùng rời khỏi input
                    input.addEventListener('blur', function () {
                        if (!this.value.trim()) {
                            this.setAttribute('readonly', true);
                            this.classList.remove('editable');
                            return;
                        }

                        if (this.getAttribute('name') === "PhoneNumber") {
                            const phone = this.value.trim();
                            if (!/^\d{10}$/.test(phone)) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Lỗi nhập liệu',
                                    text: '📱 Số điện thoại phải gồm đúng 10 chữ số!',
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#d33'
                                }).then(() => {
                                    this.focus();
                                    this.select();
                                });
                            }
                        }
                    });
                });

                //  Kiểm tra dữ liệu trước khi submit form
                document.querySelector("form").addEventListener("submit", async function (e) {
                    e.preventDefault(); // luôn chặn trước, chỉ gửi nếu hợp lệ

                    const requiredFields = ["FirstName", "LastName", "PhoneNumber"];
                    let isValid = true;

                    for (const field of requiredFields) {
                        const input = document.querySelector(`[name='${field}']`);
                        if (input && !input.value.trim()) {
                            await Swal.fire({
                                icon: 'warning',
                                title: 'Thiếu thông tin',
                                text: ` Vui lòng nhập ${field === 'FirstName' ? 'Họ' : field === 'LastName' ? 'Tên' : 'Số điện thoại'}.`,
                                confirmButtonText: 'OK',
                                confirmButtonColor: '#f39c12'
                            });
                            input.focus();
                            isValid = false;
                            return;
                        }
                    }

                    const phoneInput = document.querySelector("[name='PhoneNumber']");
                    if (phoneInput && !/^\d{10}$/.test(phoneInput.value.trim())) {
                        await Swal.fire({
                            icon: 'error',
                            title: 'Sai định dạng',
                            text: '📞 Số điện thoại phải có đúng 10 chữ số!',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#d33'
                        });
                        phoneInput.focus();
                        isValid = false;
                        return;
                    }

                    if (isValid) {
                        //  Xác nhận trước khi gửi
                        const confirmResult = await Swal.fire({
                            icon: 'question',
                            title: 'Xác nhận cập nhật?',
                            text: 'Bạn có chắc muốn lưu thay đổi này không?',
                            showCancelButton: true,
                            confirmButtonText: 'Có, lưu lại',
                            cancelButtonText: 'Hủy',
                            confirmButtonColor: '#0d6efd'
                        });

                        if (confirmResult.isConfirmed) {
                            //  Gửi form nếu người dùng xác nhận
                            this.submit();
                        }
                    }
                });
            </script>






</body>
