@model FE_Capstone_Project.Models.TourScheduleDTO
@{
    ViewData["Title"] = "Schedule Details";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning me-2">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a href="@Url.Action("Schedules")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-info-circle me-2"></i>Schedule Information
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th width="40%">Tour:</th>
                            <td>@(Model.TourName ?? $"Tour #{Model.TourId}")</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                <span class="badge @GetStatusBadgeClass(Model.ScheduleStatus)">
                                    @GetStatusText(Model.ScheduleStatus)
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th width="40%">Departure Date:</th>
                            <td>@Model.DepartureDate?.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Arrival Date:</th>
                            <td>@Model.ArrivalDate?.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Schedules", new { tourId = Model.TourId })" class="btn btn-outline-primary">
            <i class="bi bi-list-ul me-2"></i>View all schedules for this tour
        </a>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(ScheduleStatus? status)
    {
        return status switch
        {
            ScheduleStatus.Scheduled => "bg-primary",
            ScheduleStatus.Ongoing => "bg-warning",
            ScheduleStatus.Completed => "bg-success",
            ScheduleStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusText(ScheduleStatus? status)
    {
        return status switch
        {
            ScheduleStatus.Scheduled => "Scheduled",
            ScheduleStatus.Ongoing => "Ongoing",
            ScheduleStatus.Completed => "Completed",
            ScheduleStatus.Cancelled => "Cancelled",
            _ => "Unknown"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}