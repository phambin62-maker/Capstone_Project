@model FE_Capstone_Project.Models.UpdateTourScheduleRequest
@{
    ViewData["Title"] = "Chỉnh sửa Lịch trình";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <a href="@Url.Action("Schedules")" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DepartureDate" class="form-label">Ngày khởi hành *</label>
                            <input asp-for="DepartureDate" type="date" class="form-control" />
                            <span asp-validation-for="DepartureDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ArrivalDate" class="form-label">Ngày kết thúc *</label>
                            <input asp-for="ArrivalDate" type="date" class="form-control" />
                            <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ScheduleStatus" class="form-label">Trạng thái *</label>
                            <select asp-for="ScheduleStatus" class="form-select">
                                <option value="@ScheduleStatus.Scheduled">Đã lên lịch</option>
                                <option value="@ScheduleStatus.Ongoing">Đang diễn ra</option>
                                <option value="@ScheduleStatus.Completed">Đã hoàn thành</option>
                                <option value="@ScheduleStatus.Cancelled">Đã hủy</option>
                            </select>
                            <span asp-validation-for="ScheduleStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Cập nhật
                    </button>
                    <a href="@Url.Action("Schedules")" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}