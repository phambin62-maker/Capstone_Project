@model FE_Capstone_Project.Models.UpdateTourScheduleRequest
@{
    ViewData["Title"] = "Chỉnh sửa Lịch trình";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <a href="@Url.Action("Schedules")" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <!-- Thêm phần hiển thị Tour name -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body py-3">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h6 class="card-title mb-1 text-primary">
                                            <i class="bi bi-map me-2"></i>Thông tin Tour
                                        </h6>
                                        <p class="mb-0 fw-bold">
                                            @if (ViewData["TourName"] != null)
                                            {
                                                @ViewData["TourName"]
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không có thông tin tour</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <small class="text-muted">Mã lịch trình: @ViewContext.RouteData.Values["id"]</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DepartureDate" class="form-label">Ngày khởi hành *</label>
                            <input asp-for="DepartureDate" type="date" class="form-control" />
                            <span asp-validation-for="DepartureDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ArrivalDate" class="form-label">Ngày kết thúc *</label>
                            <input asp-for="ArrivalDate" type="date" class="form-control" />
                            <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ScheduleStatus" class="form-label">Trạng thái *</label>
                            <select asp-for="ScheduleStatus" class="form-select">
                                <option value="@ScheduleStatus.Scheduled">Đã lên lịch</option>
                                <option value="@ScheduleStatus.Ongoing">Đang diễn ra</option>
                                <option value="@ScheduleStatus.Completed">Đã hoàn thành</option>
                                <option value="@ScheduleStatus.Cancelled">Đã hủy</option>
                            </select>
                            <span asp-validation-for="ScheduleStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Cập nhật
                    </button>
                    <a href="@Url.Action("Schedules")" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#DepartureDate').on('change', function () {
                const departureDate = new Date($(this).val());
                const minArrivalDate = new Date(departureDate);
                minArrivalDate.setDate(minArrivalDate.getDate() + 1);

                $('#ArrivalDate').attr('min', minArrivalDate.toISOString().split('T')[0]);

                const arrivalDate = new Date($('#ArrivalDate').val());
                if (arrivalDate <= departureDate) {
                    $('#ArrivalDate').val('');
                }
            });
        });
    </script>
}