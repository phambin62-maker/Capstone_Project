@model List<UserBookingResponse>
@using BE_Capstone_Project.Domain.Enums

<h2>My Booked Tours</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <p>You have no booked tours yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Tour</th>
                    <th>Departure Date</th>
                    <th>Adults</th>
                    <th>Children</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Cancellation Info</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>#@booking.BookingId</td>
                        <td>@booking.TourName</td>
                        <td>@booking.DepartureDate.ToString("MMMM dd, yyyy")</td>
                        <td>@booking.Adults</td>
                        <td>@booking.Children</td>
                        <td>@booking.TotalPrice.ToString("N0") VND</td>
                        <td>
                            @switch (booking.Status)
                            {
                                case BookingStatus.Cancelled:
                                    <span class="badge bg-danger">Cancelled</span>
                                    break;
                                case BookingStatus.Completed:
                                    <span class="badge bg-secondary">Completed</span>
                                    break;
                                case BookingStatus.Pending:
                                    <span class="badge bg-warning text-dark">Pending</span>
                                    break;
                                case BookingStatus.Confirmed:
                                    <span class="badge bg-success">Confirmed</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Unknown</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (booking.CancelCondition != null)
                            {
                                if (booking.CancelCondition.CanCancel)
                                {
                                    <div class="text-success">
                                        <small>
                                            <i class="fas fa-check-circle"></i>
                                            @booking.CancelMessage
                                        </small>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger">
                                        <small>
                                            <i class="fas fa-times-circle"></i>
                                            @booking.CancelMessage 
                                        </small>
                                    </div>
                                }
                            }
                            else
                            {
                                <small class="text-muted">Checking...</small>
                            }
                        </td>
                        <td>
                            @if (booking.CanCancel && (booking.Status == BookingStatus.Confirmed || booking.Status == BookingStatus.Pending))
                            {
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#cancelModal"
                                        data-booking-id="@booking.BookingId"
                                        data-booking-name="@booking.TourName"
                                        data-refund-amount="@(booking.CancelCondition?.RefundAmount?.ToString("N0") ?? "0")"
                                        data-refund-percent="@(booking.CancelCondition?.RefundPercent?.ToString() ?? "0")">
                                    Cancel Booking
                                </button>
                            }
                            else if (booking.Status == BookingStatus.Cancelled)
                            {
                                <span class="text-muted">Cancelled</span>
                            }
                            else if (!booking.CanCancel && (booking.Status == BookingStatus.Confirmed || booking.Status == BookingStatus.Pending))
                            {
                                <button type="button" class="btn btn-outline-secondary btn-sm" disabled
                                        title="@booking.CancelMessage">
                                    Cannot Cancel
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">No actions</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel booking for <strong id="tourName"></strong>?</p>

                <div id="refundInfo" class="alert alert-info mt-3">
                    <h6><i class="fas fa-info-circle"></i> Refund Information:</h6>
                    <p id="refundDetails" class="mb-0"></p>
                </div>

                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                <form id="cancelForm" method="post" asp-action="CancelBooking">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="bookingId" id="bookingIdInput" />
                    <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var cancelModal = document.getElementById('cancelModal');
            cancelModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var bookingId = button.getAttribute('data-booking-id');
                var tourName = button.getAttribute('data-booking-name');
                var refundAmount = button.getAttribute('data-refund-amount');
                var refundPercent = button.getAttribute('data-refund-percent');

                document.getElementById('tourName').textContent = tourName;
                document.getElementById('bookingIdInput').value = bookingId;

                // Hiển thị thông tin hoàn tiền
                var refundDetails = document.getElementById('refundDetails');
                if (refundPercent > 0) {
                    refundDetails.innerHTML = `You will receive a refund of <strong>${refundPercent}% (${refundAmount} VND)</strong> according to our cancellation policy.`;
                    document.getElementById('refundInfo').style.display = 'block';
                } else {
                    refundDetails.innerHTML = 'No refund available for this cancellation.';
                    document.getElementById('refundInfo').style.display = 'block';
                }
            });
        });
    </script>

    <style>
        .badge {
            font-size: 0.8em;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .alert {
            margin-bottom: 1rem;
        }
    </style>
}