@model List<UserBookingResponse>
@using BE_Capstone_Project.Domain.Enums

<h2>My Booked Tours</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!Model.Any())
{
    <p>You have no booked tours yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Tour</th>
                    <th>Departure Date</th>
                    <th>Adults</th>
                    <th>Children & Infants</th>
                    <th>Total Price</th>
                    <th>Booking Status</th>
                    <th>Payment Status</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr id="booking-@booking.BookingId">
                        <td>#@booking.BookingId</td>
                        <td>@booking.TourName</td>
                        <td>@booking.DepartureDateTime.ToString("MMMM dd, yyyy")</td>
                        <td>@booking.Adults</td>
                        <td>@booking.Children</td>
                        <td>@booking.TotalPrice.ToString("N0") VND</td>
                        <td>
                            @switch (booking.Status)
                            {
                                case BookingStatus.Cancelled:
                                    <span class="badge bg-danger">Cancelled</span>
                                    break;
                                case BookingStatus.Completed:
                                    <span class="badge bg-secondary">Completed</span>
                                    break;
                                case BookingStatus.Pending:
                                    <span class="badge bg-warning text-dark">Pending</span>
                                    break;
                                case BookingStatus.Confirmed:
                                    <span class="badge bg-success">Confirmed</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Unknown</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (booking.PaymentStatus == PaymentStatus.Completed)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else if (booking.PaymentStatus == PaymentStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (booking.PaymentStatus == PaymentStatus.Refunded)
                            {
                                <span class="badge bg-info">Refunded</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@booking.PaymentStatus</span>
                            }
                        </td>
                        <td>
                            @if (booking.CancelCondition != null)
                            {
                                @if (booking.Status == BookingStatus.Completed)
                                {
                                    <div class="text-success">
                                        <small>
                                            <i class="fas fa-check-circle"></i>
                                            <strong>@booking.CancelCondition.Message</strong>
                                        </small>
                                    </div>
                                }
                                else if (booking.CancelCondition.CanCancel)
                                {
                                    <div class="text-success">
                                        <small>
                                            <i class="fas fa-check-circle"></i>
                                            <strong>@booking.CancelCondition.Message</strong>
                                            @if (booking.CancelCondition.RefundPercent > 0)
                                            {
                                                <br />
                                                <span class="text-info">
                                                    <i class="fas fa-money-bill-wave"></i>
                                                    Refund: @booking.CancelCondition.RefundPercent%
                                                    @if (booking.CancelCondition.RefundAmount > 0)
                                                    {
                                                        <text>(@booking.CancelCondition.RefundAmount.Value.ToString("N0") VND)</text>
                                                    }
                                                </span>
                                            }
                                        </small>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger">
                                        <small>
                                            <i class="fas fa-times-circle"></i>
                                            <strong>@booking.CancelCondition.Message</strong>
                                        </small>
                                    </div>
                                }
                            }
                            else
                            {
                                <small class="text-muted">Checking cancellation policy...</small>
                            }
                        </td>
                        <td>
                            @if (booking.CanCancel && booking.Status == BookingStatus.Confirmed && booking.PaymentStatus != PaymentStatus.Pending)
                            {
                                var refundAmount = booking.CancelCondition?.RefundAmount?.ToString("N0") ?? "0";
                                var refundPercent = booking.CancelCondition?.RefundPercent?.ToString() ?? "0";
                                var cancelMessage = booking.CancelCondition?.Message ?? booking.CancelMessage;

                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#cancelModal"
                                        data-booking-id="@booking.BookingId"
                                        data-booking-name="@booking.TourName"
                                        data-refund-amount="@refundAmount"
                                        data-refund-percent="@refundPercent"
                                        title="@cancelMessage">
                                    Cancel Booking
                                </button>
                            }
                            else if (booking.Status == BookingStatus.Cancelled)
                            {
                                if (booking.PaymentStatus == PaymentStatus.Refunded)
                                {
                                    <span class="text-muted">Refunded</span>
                                }
                                else
                                {
                                    <span class="text-muted">Cancelled</span>
                                }
                            }
                            else if (booking.Status == BookingStatus.Confirmed || booking.Status == BookingStatus.Pending)
                            {
                                string title = booking.CancelMessage ?? "Cancellation is restricted for this booking.";
                                if (booking.Status == BookingStatus.Pending) title = "Pending bookings cannot be cancelled.";
                                else if (booking.PaymentStatus == PaymentStatus.Pending) title = "Bookings with pending payment cannot be cancelled.";

                                <button type="button" class="btn btn-outline-secondary btn-sm" disabled
                                        title="@title">
                                    Cannot Cancel
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">No actions</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel booking for <strong id="tourName"></strong>?</p>

                <div id="refundInfo" class="alert alert-info mt-3">
                    <h6><i class="fas fa-info-circle"></i> Refund Information:</h6>
                    <p id="refundDetails" class="mb-0"></p>
                </div>

                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                <form id="cancelForm" method="post" asp-action="CancelBooking">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="bookingId" id="bookingIdInput" />
                    <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var cancelModal = document.getElementById('cancelModal');
        cancelModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var bookingId = button.getAttribute('data-booking-id');
            var tourName = button.getAttribute('data-booking-name');

            var refundAmount = button.getAttribute('data-refund-amount') || "0";
            var refundPercent = button.getAttribute('data-refund-percent') || "0";

            document.getElementById('tourName').textContent = tourName;
            document.getElementById('bookingIdInput').value = bookingId;

            var refundDetails = document.getElementById('refundDetails');
            var refundInfo = document.getElementById('refundInfo');

            if (parseFloat(refundPercent) > 0) {
                refundDetails.innerHTML = `You will receive a refund of <strong>${refundPercent}%</strong> according to our cancellation policy.`;
                refundInfo.style.display = 'block';
                refundInfo.className = 'alert alert-info mt-3';
            } else {
                refundDetails.innerHTML = '<strong>No refund available</strong> for this cancellation according to our policy.';
                refundInfo.style.display = 'block';
                refundInfo.className = 'alert alert-warning mt-3';
            }
        });
    });
</script>

<style>
    .badge {
        font-size: 0.8em;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .alert {
        margin-bottom: 1rem;
    }
</style>