@using FE_Capstone_Project.Helpers;
@using System.Globalization
@model TourViewModel
@{
    string avgRatingText = "N/A";
    if (Model.Reviews != null && Model.Reviews.Any())
    {
        decimal avgRating = (decimal)Model.Reviews.Average(r => r.Stars);
        avgRatingText = avgRating.ToString("0.0");
    }
    bool isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserName")); 
    var currentUsername = Context.Session.GetString("UserName");

    var BASE_API_URL = "https://localhost:7160/api/";
}
<body class="tour-details-page">
    <main class="main">

        <!-- Page Title -->
        <div class="page-title dark-background" data-aos="fade" style="background-image: url(~/assets/img/travel/showcase-8.webp);">
            <div class="container position-relative">
                <h1>Tour Details</h1>
                <p>Discover all the details about this adventure — from destinations and activities to prices and ratings.</p>
                <nav class="breadcrumbs">
                    <ol>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="current">Tour Details</li>
                    </ol>
                </nav>
            </div>
        </div><!-- End Page Title -->
        <!-- Travel Tour Details Section -->
        <section id="travel-tour-details" class="travel-tour-details section">

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <!-- Hero Section -->
                <div class="tour-hero">
                    <div class="hero-image-wrapper">
                        @{
                            var mainImage = Model.TourImages!.First();
                            var mainImageUrl = $"{BASE_API_URL}Tour/GetImage?path={Uri.EscapeDataString(mainImage!.Image!)}";
                        }
                        <img src="@mainImageUrl" class="img-fluid w-100" />
                        <div class="hero-overlay">
                            <div class="hero-content">
                                <h1>@Model.Name</h1>
                                <div class="hero-meta">
                                    <span class="duration"><i class="bi bi-calendar"></i> @Model.Duration Day@(Model.Duration == 1 ? "" : "s")</span>
                                    <span class="destination"><i class="bi bi-geo-alt"></i> @Model.EndLocation.LocationName</span>
                                    <span class="rating"><i class="bi bi-star-fill"></i> @avgRatingText (@Model.Reviews!.Count review@(Model.Reviews!.Count == 1 ? "" : "s"))</span>
                                    <span class="rating"><i class="bi bi-people-fill"></i> @Model.MaxSeats seats per booking</span>
                                </div>
                                <a asp-controller="@(isLoggedIn ? "BookingWeb" : "AuthWeb")"
                                   asp-action="@(isLoggedIn ? "Index" : "Login")"
                                   asp-route-tourId="@Model.Id"
                                   class="btn-book me-2">
                                    @(isLoggedIn ? "Book Now" : "Login to Book")
                                </a>

                                @if (isLoggedIn)
                                {
                                    <a asp-controller="Profile"
                                       asp-action="@(ViewBag.IsInWishlist == true ? "RemoveFromWishlist" : "AddToWishlist")"
                                       asp-route-tourId="@Model.Id"
                                       asp-route-tourName="@Model.Name" class="btn-book">
                                        @(ViewBag.IsInWishlist == true ? "Remove from wishlist" : "Add to wishlist")
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tour Overview -->
                <div class="tour-overview" data-aos="fade-up" data-aos-delay="200">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>Tour Overview</h2>
                            @{
                                var desc = Model.Description ?? string.Empty;
                                var paragraphs = desc.Split(new[] { "\r\n\r\n", "\n\n", "\r\r" }, StringSplitOptions.RemoveEmptyEntries);
                            }
                            @foreach (var para in paragraphs)
                            {
                                var encoded = System.Net.WebUtility.HtmlEncode(para.Trim());
                                <p>@Html.Raw(encoded.Replace("\r\n", "<br/>").Replace("\n", "<br/>"))</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="tour-pricing" data-aos="fade-up" data-aos-delay="500">
                    <h2>Pricing &amp; Dates</h2>
                    <div class="pricing-table">
                        <div class="pricing-header">
                            <div class="price-item">
                                <h3>Starting from</h3>
                                <div class="price-amount">@string.Format("{0:N0} VND", Model.Price)</div>
                                <p>per person</p>
                            </div>
                        </div>
                        <div class="pricing-details">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="price-type">
                                        <h4>Child Discount</h4>
                                        <div class="price">@string.Format("{0:N0}", Model.ChildDiscount)%</div>
                                        <p>per child</p>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="price-type">
                                        <h4>Group Discount</h4>
                                        <div class="price">@string.Format("{0:N0}", Model.GroupDiscount)%</div>
                                        <p>for @Model.GroupNumber+ people</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="available-dates">
                            <h3>@DateTime.Now.Year-@DateTime.Now.AddYears(1).Year Departure Dates</h3>
                            <div class="dates-grid">
                                @{
                                    var schedules = ViewBag.TourSchedules as List<TourScheduleDTO>;
                                }
                                @if (schedules != null && schedules.Count > 0)
                                {
                                    @foreach (TourScheduleDTO schedule in schedules)
                                    {
                                        <div class="date-option">
                                            <div class="date">
                                                @schedule.DepartureDate.Value.ToString("MMM dd", CultureInfo.InvariantCulture) -
                                                @schedule.ArrivalDate.Value.ToString("MMM dd", CultureInfo.InvariantCulture)
                                            </div>
                                            @{
                                                var bookedSeatsList = ViewBag.BookedSeats as List<ScheduleBookedSeatsResponse> ?? new List<ScheduleBookedSeatsResponse>();
                                                var bookedSeats = bookedSeatsList
                                                        .FirstOrDefault(b => b.TourScheduleId == schedule.Id)?.BookedSeats ?? 0;

                                                // Calculate available seats
                                                var availableSeats = Model.MaxSeats - bookedSeats;
                                            }
                                            <div class="availability">Available (@availableSeats seats left)</div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>No scheduled dates available at the moment. Please check back later.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gallery -->
                <div class="tour-gallery" data-aos="fade-up" data-aos-delay="700">
                    <h2>Photo Gallery</h2>
                    <div class="gallery-grid">
                        @foreach (var images in Model.TourImages)
                        {
                            <div class="gallery-item">
                                @{
                                    var image = images;
                                    var imageUrl = $"{BASE_API_URL}Tour/GetImage?path={Uri.EscapeDataString(image.Image!)}";
                                }
                                <a href="@imageUrl" class="glightbox">
                                    <img src="@imageUrl" class="img-fluid" loading="lazy">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </section><!-- /Travel Tour Details Section -->
        <!-- Blog Comment Form Section -->
        <section id="blog-comment-form" class="blog-comment-form section position-relative">

            @* ✅ Blur Overlay if user is not logged in *@
            @if (!ViewBag.CanComment)
            {
                <div id="login-overlay" class="login-overlay">
                    <div class="overlay-content">
                        <p>
                            You can only leave a review after booking this tour.
                            @if (isLoggedIn)
                            {
                                <a asp-controller="BookingWeb" asp-action="Index" asp-route-tourId="@Model.Id"> Book Now</a>
                            }
                            else
                            {
                                <a asp-controller="AuthWeb" asp-action="Login">Log In to Book</a>
                            }
                        </p>
                    </div>
                </div>
            }

            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <form asp-action="PostComment" asp-controller="Review" method="post" role="form">
                    <input type="hidden" name="TourId" value="@Model.Id" />
                    <div class="section-header">
                        <h3>Share Your Thoughts</h3>
                    </div>

                    <!-- ⭐ Star Rating -->
                    <div class="star-rating mb-3 text-center">
                        <input type="radio" id="star5" name="Rating" value="5" /><label for="star5" title="5 stars">★</label>
                        <input type="radio" id="star4" name="Rating" value="4" /><label for="star4" title="4 stars">★</label>
                        <input type="radio" id="star3" name="Rating" value="3" /><label for="star3" title="3 stars">★</label>
                        <input type="radio" id="star2" name="Rating" value="2" /><label for="star2" title="2 stars">★</label>
                        <input type="radio" id="star1" name="Rating" value="1" /><label for="star1" title="1 star">★</label>
                    </div>

                    <div class="row gy-3">
                        <div class="col-12 form-group">
                            <label for="comment">Your Comment *</label>
                            <textarea class="form-control" name="Comment" id="comment" rows="5"
                                      placeholder="Write your thoughts here..." required></textarea>
                        </div>

                        <div class="col-12 text-center">
                            <button type="submit" class="btn-submit" @(isLoggedIn ? "" : "disabled")>Post Comment</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!-- Blog Comments Section -->
        <section id="blog-comments" class="blog-comments section">

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="blog-comments-4">
                    <div class="comments-header">
                        <h3 class="title">Community Feedback</h3>
                        <div class="comments-stats">
                            <span class="count">@Model.Reviews.Count</span>
                            <span class="label">Comment@(Model.Reviews.Count == 1 ? "" : "s")</span>
                        </div>
                    </div>

                    <div class="comments-container">
                    @{
                        var sortedReviews = Model.Reviews.OrderByDescending(r => r.CreatedDate).ToList();
                    }
                        @foreach (var comment in sortedReviews)
                        {
                            <div class="comment-thread">
                                <div class="comment-box">
                                    <div class="comment-wrapper">
                                        <div class="avatar-wrapper">
                                            <img src="@comment.User.Image" alt="Avatar" loading="lazy">
                                        </div>

                                        <div class="comment-content">
                                            <div class="comment-header">
                                                <div class="user-info">
                                                    <h4>@comment.User.Username</h4>
                                                    <div class="star-display">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= comment.Stars)
                                                            {
                                                                <i class="bi bi-star-fill text-warning"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="bi bi-star text-secondary"></i>
                                                            }
                                                        }
                                                    </div>
                                                    <span class="time-badge">
                                                        <i class="bi bi-clock"></i>
                                                        @TimeHelper.GetTimeAgo(comment.CreatedDate.Value)
                                                    </span>
                                                </div>

                                                <div class="engagement">
                                                    @if (comment.User.Username == currentUsername)
                                                    {
                                                        <div class="comment-actions d-flex gap-2">
                                                            <button class="btn btn-light btn-sm border"
                                                                    onclick="openEditModal(@comment.TourId, @comment.Id, @comment.Stars, '@comment.Comment')">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>

                                                            <form asp-action="DeleteComment"
                                                                  asp-controller="Review"
                                                                  asp-route-reviewId="@comment.Id"
                                                                  asp-route-tourId="@comment.TourId"
                                                                  method="post"
                                                                  class="d-inline">
                                                                <button type="submit" 
                                                                        onclick="return confirm('Are you sure you want to delete this review?');"
                                                                        class="btn btn-light btn-sm border text-danger">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                            <div class="comment-body" id="comment-body-@comment.Id">
                                                <p class="comment-text">@comment.Comment</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section><!-- /Blog Comments Section -->
    </main>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script>
        function openEditModal(tourId, id, stars, comment) {
          document.getElementById("tourId").value = tourId;
          document.getElementById("editReviewId").value = id;
          document.getElementById("editReviewComment").value = comment;

          // Reset all stars
          document.querySelectorAll('input[name="Rating"]').forEach(r => r.checked = false);
          // Check the selected star
          const starInput = document.querySelector(`#edit-star${stars}`);
          if (starInput) starInput.checked = true;

          var modal = new bootstrap.Modal(document.getElementById('editReviewModal'));
          modal.show();
        }
    </script>
    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>
</body>

<!-- Edit Review Modal -->
<div class="modal fade" id="editReviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditComment" asp-controller="Review" method="post" id="editReviewForm">
                <input type="hidden" id="tourId" name="tourId" />
                <div class="modal-header">
                    <h5 class="modal-title">Edit Your Review</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editReviewId" name="reviewId" />

                    <div class="mb-3 text-center">
                        <div class="star-rating">
                            <input type="radio" id="edit-star5" name="Rating" value="5"><label for="edit-star5" title="5 stars">★</label>
                            <input type="radio" id="edit-star4" name="Rating" value="4"><label for="edit-star4" title="4 stars">★</label>
                            <input type="radio" id="edit-star3" name="Rating" value="3"><label for="edit-star3" title="3 stars">★</label>
                            <input type="radio" id="edit-star2" name="Rating" value="2"><label for="edit-star2" title="2 stars">★</label>
                            <input type="radio" id="edit-star1" name="Rating" value="1"><label for="edit-star1" title="1 star">★</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Comment</label>
                        <textarea id="editReviewComment" name="Comment" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

