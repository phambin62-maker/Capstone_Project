@model FE_Capstone_Project.Models.NewsListViewModel
@using Microsoft.AspNetCore.Routing
@{
    ViewData["Title"] = "News List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .image-container {
        height: 220px; 
        overflow: hidden; 
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .news-image {
        width: 100%;
        height: 100%;
        object-fit: cover; 
        transition: transform 0.5s ease; 
    }

    .news-card {
        border: none;
        border-radius: 15px; 
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
        background: #fff;
    }

        .news-card:hover {
            transform: translateY(-10px) scale(1.02); 
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important; 
            z-index: 10; 
        }

            .news-card:hover .news-image {
                transform: scale(1.1);
            }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .filter-box {
        background: linear-gradient(to right, #f8f9fa, #ffffff);
        border: 1px solid #e9ecef;
    }
</style>

<header class="blog-hero-section py-5 text-center mb-4" style="background-color: black;">
    <h1 class="display-4 fw-bold text-white">📰 NEWS</h1>
    <p class="lead text-white-50">Explore the latest news and articles</p>
</header>

<div class="container pb-5">

    <div class="filter-box shadow-sm mb-5 p-4 rounded-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label text-primary fw-semibold">Search</label>
                <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Title or author..." />
            </div>
            <div class="col-md-3">
                <label class="form-label text-primary fw-semibold">From date</label>
                <input type="date" name="fromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label text-primary fw-semibold">To date</label>
                <input type="date" name="toDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary rounded-pill px-2">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>
    </div>

    <div id="loadingSpinner" class="text-center my-5" style="display:none;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading articles...</p>
    </div>

    <div id="blogContent">
        @if (Model.NewsList != null && Model.NewsList.Any())
        {
            <div class="row g-4 blog-grid-items">
                @foreach (var item in Model.NewsList)
                {
                    string fallbackImageUrl = "/assets/img/blog/blog-hero-1.webp"; 
                    string imageUrl = string.IsNullOrEmpty(item.Image) ? fallbackImageUrl : item.Image;

                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm news-card">

                            <div class="image-container">
                                <img src="@imageUrl" class="card-img-top news-image" alt="@item.Title" onerror="this.src='/assets/img/blog/blog-hero-1.webp'" />
                            </div>

                            <div class="card-body d-flex flex-column p-4">
                                <h5 class="card-title fw-bold text-dark text-truncate-2 mb-2" title="@item.Title">@item.Title</h5>

                                <p class="text-muted small mb-3">
                                    <i class="bi bi-person-circle text-primary"></i> @item.AuthorName &nbsp;
                                    <span class="text-secondary">|</span> &nbsp;
                                    <i class="bi bi-calendar3 text-primary"></i> @item.CreatedDate?.ToString("dd/MM/yyyy")
                                </p>

                                <p class="card-text text-secondary mb-4 text-truncate-3">
                                    @System.Text.RegularExpressions.Regex.Replace(item.Content ?? "", "<.*?>", String.Empty)
                                </p>

                                <div class="mt-auto">
                                    <a href="@Url.Action("Detail", "News", new { id = item.Id })" class="btn btn-outline-primary rounded-pill w-100 fw-bold">
                                        Details <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <nav style="margin-top: 6rem;">
                <ul class="pagination justify-content-center">
                    @{
                        string GetPageUrl(int pageNum)
                        {
                            return Url.Action("Index", "News", new
                            {
                                page = pageNum,
                                search = Model.Search,
                                fromDate = Model.FromDate?.ToString("yyyy-MM-dd"),
                                toDate = Model.ToDate?.ToString("yyyy-MM-dd")
                            });
                        }
                    }

                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link rounded-start-pill" href="@GetPageUrl(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@GetPageUrl(i)">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link rounded-end-pill" href="@GetPageUrl(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <div class="text-center text-muted py-5 empty-state">
                <i class="bi bi-journal-x fs-1 text-secondary opacity-50"></i>
                <h3 class="mt-3 text-dark">No articles found</h3>
                <p>Try adjusting your search criteria.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const form = document.querySelector(".filter-box form");
        const spinner = document.getElementById("loadingSpinner");
        const content = document.getElementById("blogContent");

        if (form) {
            form.addEventListener("submit", () => {
                spinner.style.display = "block";
                if (content) content.style.opacity = "0.3";
            });
        }
    </script>
}