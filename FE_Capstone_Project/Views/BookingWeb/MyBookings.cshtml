@model List<FE_Capstone_Project.Models.BookingDto>

@{
    ViewData["Title"] = "Lịch sử đặt tour của tôi";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <p>Bạn chưa có đặt tour nào.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Khám phá tour ngay</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@booking.TourName</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Mã đặt tour:</strong> #@booking.Id</p>
                            <p><strong>Ngày đặt:</strong> @booking.BookingDate?.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Tổng tiền:</strong> @booking.TotalPrice?.ToString("N0") VNĐ</p>
                            <p>
                                <strong>Trạng thái:</strong>
                                <span class="badge
                                            @(booking.BookingStatus == BE_Capstone_Project.Domain.Enums.BookingStatus.Confirmed ? "bg-success" :
                                                                            booking.BookingStatus == BE_Capstone_Project.Domain.Enums.BookingStatus.Pending ? "bg-warning" :
                                                                            booking.BookingStatus == BE_Capstone_Project.Domain.Enums.BookingStatus.Cancelled ? "bg-danger" :
                                                                            "bg-secondary")">
                                                                                         @booking.BookingStatus
                                                                                     </span>
                                                                                 </p>
                                                                                 <p>
                                                                                     <strong>Thanh toán:</strong>
                                                                                     <span class="badge
                                            @(booking.PaymentStatus == BE_Capstone_Project.Domain.Enums.PaymentStatus.Paid ? "bg-success" :
                                                                            booking.PaymentStatus == BE_Capstone_Project.Domain.Enums.PaymentStatus.Pending ? "bg-warning" :
                                                                            "bg-secondary")">
                            @booking.PaymentStatus
                        </span>
                    </p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("BookingDetails", new { id = booking.Id })" class="btn btn-primary btn-sm">
                        Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
                }
        </div>
    }
</div>